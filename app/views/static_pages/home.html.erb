<div id= "homepage">
	<!-- Main Container -->
	<div class = "container">

		<div class = "row">

			<!-- Left Section -->
			<section class = "col-md-7 marketing">
				<h1>Connect with all your friends!</h1>
				<ul>
					<li><strong>See photos and updates</strong> in your feed.</li>
					<li><strong>Post your status for the world to see</strong> from your profile.</li>
					<li><strong>Get in touch with your friends</strong> by "friending them".</li>
					<li><strong>Like things</strong> because you're a positive person!</li>
				</ul>
			</section>

			<!-- Right Section -->
			<section class = "col-md-5 sign-up">

				<div class = "row col-lg-10 col-lg-offset-1">
					<h2>Sign up</h2>

					<!-- Email and Password -->

					<div class = "row">
						<%= form_for(@user) do |f| %>
							<div class='form-group'>
								<%= f.label :email %>
								<%= f.email_field :email, class: "form-control" %><br>
							</div>

							<div class='form-group'>
								<%= f.label :password %>
								<%= f.password_field :password, class: "form-control" %><br>
							</div>
						
							<div class='form-group'>
								<%= f.label :password_confirmation %>
								<%= f.password_field :password_confirmation, class: "form-control" %><br>
								<%= f.submit "Sign Up !", class: "btn btn-lg btn-primary" %>
							</div>
															
						<% end %>
					</div>
				</div>
			</section>
		</div>
	</div>
</div>