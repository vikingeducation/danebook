<div class="container">
  <div class="row" id="cover-photo">
    <div class="col-sm-10 username">
      <a href="#"><%= image_tag("harry_potter_small.jpg", id: "profile-pic") %></a>
      <h1>Harry Potter</h1>
    </div>
  </div>
  <div class="row link-bar">
    <div class="col-sm-7 col-sm-offset-2" role="navigation">
      <ul class="nav nav-pills nav-justified">
        <li role="presentation" class="<%= "active-tab" if controller.action_name == 'timeline' %>"><%= link_to "Timeline", root_path %></li>
        <li role="presentation"><%= link_to "About", user_profile_path(user, user.profile) %></li>
        <li role="presentation" class="<%= "active-tab" if controller.action_name == 'photos' %>"><%= link_to user_photos_path(params[:user_id]) do %>
            Photos <span>(123)</span>
          <% end %></li>
        <li role="presentation" class="<%= "active-tab" if controller.action_name == 'friends' %>"><%= link_to user_friends_path(params[:user_id]) do %>
          Friends <span>(542)</span>
        <% end %></li>
      </ul>
    </div><!-- Nav Menu -->
    <% if current_user.id == params[:user_id]  %>
      <div class="col-sm-3">
        <h5 class="text-right"><%= link_to "Edit Profile", edit_user_profile(params[:user_id]), id: "edit-profile-link" %></h5>
      </div><!-- Edit Profile Link -->
    <% end %>
  </div><!-- Link bar -->
</div> <!-- Banner Container -->
