<div class="container">
  <div class="row" id="cover-photo">
    <div class="col-sm-10 username">
      <a href="#"><%= image_tag("harry_potter_small.jpg", id: "profile-pic") %></a>
      <h1>Harry Potter</h1>
    </div>
  </div>
  <div class="row link-bar">
    <div class="col-sm-7 col-sm-offset-2" role="navigation">
      <ul class="nav nav-pills nav-justified">
        <li role="presentation" class="<%= "active-tab" if page_from.downcase == 'timeline' %>"><%= link_to "Timeline", timeline_path %></li>
        <li role="presentation"  class="<%= "active-tab" if page_from.downcase == 'about' %>"><%= link_to "About", about_path %></li>
        <li role="presentation" class="<%= "active-tab" if page_from.downcase == 'photos' %>"><%= link_to photos_path do %>
            Photos <span>(123)</span>
          <% end %></li>
        <li role="presentation" class="<%= "active-tab" if page_from.downcase == 'friends' %>"><%= link_to friends_path do %>
          Friends <span>(542)</span>
        <% end %></li>
      </ul>
    </div><!-- Nav Menu -->
    <% if edit %>
    <div class="col-sm-3">
      <h5 class="text-right"><a href="about_edit.html" id="edit-profile-link">Edit Profile</a></h5>
    </div><!-- Edit Profile Link -->
    <% end %>
  </div><!-- Link bar -->
</div> <!-- Banner Container -->
