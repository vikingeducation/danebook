
<div id="about" class="container">
  <header class="row" id="row-header">
    <div class="col-xs-4 col-xs-offset-4 content-center">
      <h1 id="about-header">Edit Profile</h1> 
    </div>
  </header>
  <div class="row" id="about-content">
    <div class="col-xs-5" id="basic-and-contact-info">
      <div class="row">
        <div class="col-xs-11 col-xs-offset-1">
          <h2>Basic Information</h2>
        </div>  
      </div>
      <div class="row">
        <div class="col-xs-1 col-xs-offset-1">
          <h4>Birthday:</h4>
        </div>

        <%= form_for @profile, url: profile_path do |p| %>
          <div class="col-xs-4 col-xs-offset-3">
            <h4 class="not-bold">
            <%= p.text_field :birth_date %>
            
            </h4>
          </div>  
        </div>
        <div class="row">
          <div class="col-xs-1 col-xs-offset-1">
            <h4>College:</h4>
          </div>
          <div class="col-xs-5 col-xs-offset-3">
            <h4 class="not-bold">
              <%= p.text_field :college %>
            </h4>
          </div>  
        </div>
        <div class="row">
          <div class="col-xs-1 col-xs-offset-1">
            <h4>Hometown:</h4>
          </div>
          <div class="col-xs-7 col-xs-offset-3">
            <h4 class="not-bold">
              <%= p.text_field :hometown %>
            </h4>
          </div>  
        </div>
        <div class="row">
          <div class="col-xs-5 padding-left-super">
            <h4>Currently Lives:</h4>
          </div>
          <div class="col-xs-7">
            <h4 class="not-bold">
              <%= p.text_field :currently_lives %>
            </h4>
          </div>  
        </div>
        <div class="row" id="contact-information">
          <header class="col-xs-11 col-xs-offset-1">
            <h2>Contact Information</h2>
          </header>
        </div>
        <div class="row">
          <div class="col-xs-5 padding-left-super">
            <h4>Email:</h4>
          </div>
          <div class="col-xs-7 col-xs-offset-0">
            <h4 class="not-bold">
              <%= @user.email %>
            </h4>
          </div>  
        </div>
        <div class="row">
          <div class="col-xs-5 padding-left-super">
            <h4>Telephone:</h4>
          </div>
          <div class="col-xs-7 col-xs-offset-0">
            <h4 class="not-bold">
              <%= p.text_field :telephone %>
            </h4>
          </div>  
        </div>
      </div>
      <div class="col-xs-7" id="words-and-about-me">
        <div class="row padding-left">
          <header class="col-xs-12">
            <h2>Words to Live By</h2>
          </header> 
        </div>
        <div class="row padding-left">
          <div class="col-xs-11">
            <%= p.text_area :life_words %>
          </div>  
        </div>
        <div class="row padding-left">
          <header class="col-xs-12">
            <h2 id="about-me-title">About Me</h2>
          </header> 
        </div>
        <div class="row padding-left">
          <div class="col-xs-11">
            <%= p.text_area :about_me %>
          </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
      <%= p.submit :id => "save-button" %>
    <% end %>
    </div>
  </div>
</div>
