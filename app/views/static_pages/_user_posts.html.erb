<% posts.each do |post| %>
<section class="row section-container">
  <div class="col-sm-12">
    <div class="row post-wrapper">
      <div class="col-xs-2 col-sm-1">
      <%= image_tag("harry_potter_small.jpg", class: "post-pic") %>
      </div>
      <div class="col-xs-9 col-sm-10 friend-name-wrapper">
        <p><%= link_to @user.full_name, user_profile_path(@user, @user.profile), class: "friend-name" %></p>
        <p>Posted on <%= post.updated_at.strftime("%A %-m/%-d/%Y") %></p>
      </div>
    </div>
    <div class="row post-wrapper">
      <div class="col-xs-12">
        <p class="post-content"><%= post.description %></p>
      </div>
    </div>
    <div class="row post-wrapper section-footer">
      <div class="col-xs-7 col-sm-4">
        <a class="friend-name" href="#">Like</a>
        <a class="friend-name" href="#">Comment</a>
      </div>
      <div class="col-xs-5 col-sm-8 text-right">
        <!-- <%= link_to "Delete", post_path(post), method: :delete %> -->
        <%= button_to "Delete", post_path(post), method: :delete %>
        <!-- <a class="friend-name" href="#">Delete</a> -->
      </div>
    </div>
  </div>
</section><!-- Old Post Section -->
<% end %>
