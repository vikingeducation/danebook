<% posts.each do |post| %>
<section class="row section-container">
  <div class="col-sm-12">
    <div class="row post-wrapper">
      <div class="col-xs-2 col-sm-1">
      <%= image_tag("harry_potter_small.jpg", class: "post-pic") %>
      </div>
      <div class="col-xs-9 col-sm-10 friend-name-wrapper">
        <p><%= link_to @user.full_name, user_profile_path(@user, @user.profile), class: "like-link" %></p>
        <p>Posted on <%= post.updated_at.strftime("%A %-m/%-d/%Y") %></p>
      </div>
    </div>
    <div class="row post-wrapper">
      <div class="col-xs-12">
        <p class="post-content"><%= post.description %></p>
      </div>
    </div>
    <div class="row post-wrapper section-footer">
      <div class="col-xs-7 col-sm-4">
        <% if post.likers.include?(current_user) %>
          <%= button_to "Unlike", like_path( user_liked_id(post)), method: :delete, class: "friend-name like-link"%>
        <% else %>
          <%= button_to "Like", post_likes_path(post), method: :post, class: "friend-name like-link" %>
        <% end %>
        <div class="col-xs-7 col-sm-7 text-right">
          <% if @user == current_user %>
            <%= button_to "Delete", post_path(post), method: :delete, class: "like-link" %>
          <% end %>
  			</div>
        <%= link_to "Comment", new_post_comment_path(post), class: "like-link" %>
      </div>
      <div class="row">
        <div class="col-xs-12 like-listing-expanded hr-block">
            <p><%= print_likers(post) %></p>
            <hr>
        </div>
      </div>
      <div class="col-xs-12">
  			<div class="row post-wrapper">
            <% post.comments[0..6].each_with_index do |comment, index| %>

                  <%= render 'comment', comment: comment, post: post, index: index %>

            <% end %>
            <%= render 'new_comment_form', post: post %>
  				</div><!-- Comment content wrapper -->
          <%= link_to "Comment", new_post_comment_path(post), class: "like-link" %>
        </div><!-- Comment wrapper -->
      </div>
    </div>
  </section><!-- Old Post Section -->
<% end %>
