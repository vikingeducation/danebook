<div id="static_pages">
	<%= render 'navbar' %>

	<%= render 'banner', user: @user %>

	<main class="container">
		<div class="row">
			<div class="col-sm-5 right-gutter hidden-xs">
				<%= render 'about_content' %>
				<%= render 'photo_preview' %>
				<%= render 'friends_preview' %>
			</div><!-- Left Content -->
			<div class="col-sm-7">
				<% if current_user == @user %>
					<%= render 'new_post', post: @post %>
				<% end %>
				<%= render 'user_posts', posts: @posts %>
	</main>
</div>
