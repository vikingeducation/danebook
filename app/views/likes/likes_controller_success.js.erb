var dataIdPrefix = "Like-<%=@like.likings_type%>-<%=@like.likings_id.to_s%>";

var $likeText= $('span[data-id='+ dataIdPrefix+ '-text]');
var $likeLink = $('span[data-id='+ dataIdPrefix+ '-link]');

if (<%= !flash[:success].blank? %>){
  //update link and display

  $likeText.html("<%= j(like_display(obj).html_safe )%>");
  $likeLink.html("<%= j(like_or_unlike_link(obj)) %>");
};


$("#flash-messages").html("<%= j(render partial: 'shared/flash') %>").slideDown();
<% flash.clear %>