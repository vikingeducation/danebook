<%= if post.liked_by?(current_user)
  link_to 'Unlike', photo_like_path(post, current_user), method: :delete, data: {'post-id': post.id, 'content': 'post-like-button'}, remote: true
else
  link_to 'Like', photo_likes_path(post), method: :post, remote: true, data: {'post-id': post.id, 'content': 'post-like-button'}
end
%>
<span><%= post.post_likes(current_user) %></span>