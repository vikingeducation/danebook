<% if current_page?(root_url) %>
  <% on_homepage = true %>
<% elsif current_page?(new_user_path)%>
  <% on_homepage = true %>
<% elsif current_page?root_url%>
  <% on_homepage = true %>
<% else %>
  <% on_homepage = false %>
<% end %>

<% if on_homepage %>
  <%= form_tag sessions_path do %>
    <div class="homepage">
      <div class="navbar">
        <%= link_to root_url do %>
          Danebook
        <% end %>
        <div class="login-container navbar-form navbar-right">
          <%= text_field_tag :email, nil, id:"emailInput1", class: "form-control", placeholder: "Email" %>
          <%= password_field_tag :password, nil, id:"emailInput2", class: "form-control", placeholder: "Password" %>
          <%= submit_tag "Sign in", class: "btn btn-info" %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>