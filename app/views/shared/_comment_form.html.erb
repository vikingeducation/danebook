<%= form_for [commentable, @comment], remote: true, data: { "commentable-id": commentable.id, "commentable-type": commentable.class.to_s } do |comment_fields| %>

  <div class="col-md-12">

    <div class="form-group" id = "comment-box">

      <%= comment_fields.text_area :body, class: "form-control", rows: "4", placeholder: "Write a comment..." %>

      <%= comment_fields.hidden_field(:commentable_type, value: commentable.class.to_s) %>

      <%= comment_fields.hidden_field(:commentable_id, value: commentable.id) %>

    </div>

    <div class="form-group">
      <a class="col-md-1 comment-box" href="#" data-commentable-id = '<%= commentable.id %>' data-commentable-type = '<%= commentable.class.to_s %>'>Cancel</a>
      <%= comment_fields.submit "Comment", class: "col-md-3 pull-right btn btn-primary" %>
    </div>

  </div>
<% end -%>