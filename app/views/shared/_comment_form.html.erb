<%= form_for Comment.new, remote: true, html: {class: "col-md-12"} do |f| %>

  <div class="form-group">

    <input type="hidden" name="comment[commentable_type]" value=<%=parent.class %>>
    <input type="hidden" name="comment[commentable_id]" value=<%=parent.id %>>

    <%= f.text_field :body, class: "form-control", rows: "4", placeholder: "Write a comment..." %>

  </div>

  <div class="form-group">
    <!-- <a class="col-md-1" href="#">Cancel</a> -->

    <%= f.submit class: "col-md-7 pull-right btn btn-primary" %>
  </div>

<% end %>