<article class="row post">
          <div class="row">
            <div class="col-md-2">
              <a href="#">
                <%= image_tag 'user_silhouette_generic.gif', class: 'img-responsive' %>
              </a>
            </div>
            <div class="col-md-10">
              <a href="#">Harry Potter</a>
              <p class="post-date">Posted on <%= post.created_at %></p>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
            <p><%= post.content %></p>
            </div>
          </div>
          <div class="row comment-section post-bottom">
            <div class="col-md-1">
              <a href="#">Like</a>
            </div>
            <div class="col-md-1">
              <a href="#">Comment</a>
            </div>
            <div class="col-md-1 col-md-offset-8">
              <a href="#">Delete</a>
            </div>
          </div>
        </article>