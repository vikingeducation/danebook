
<div class="row">
  <!-- Post Header -->
  <div class="col-sm-12">
    <nav class="navbar navbar-default about-nav">
      <p class="box-header">Post</p>
    </nav>
  </div>
</div>
<!-- End of Post Header -->

<!-- Textarea input -->
<div clas="row">
  <div class="col-xs-12 about-info">
    <div class="col-xs-12">
    <%= errors(@post,:body) if @post %>
    <%= form_for current_user.posts.build, remote: true do |f| %>
      <div class="form-group textarea-size txtbox-bg" style="margin:0 0 10px 0">
        <%= f.text_area :body, class: "form-control edit-textarea", rows: "4", placeholder: "Tell the world something..." %>
      </div>
      <!-- Post CTA -->
      <div class="text-right" style="padding:0 0 10px 0;">
        <%= f.submit class: "btn btn-primary post-cta" %>
      </div>
      <!-- End of Post CTA -->
      </div>
    <% end %>
  </div>
</div>
<!-- End Textarea input -->
