<%= form_for [current_user, @post], remote: true, html: {class: "row", id: "post-form"}  do |f| %>
  <div class = "col-sm-12">
    <h5 class = "h3">Post</h5>
  </div>
  <div class = "col-sm-12" id = "post-textarea-col">
    <div class = "form-group">
      <%=f.text_area :body, rows: "6", class: "form-control", placeholder: "Tell the world something..."%>
    </div>
  </div>

  <div class = "col-sm-12" >
    <div class = "form-group pull-right">
      <%= f.submit "Post", class: "btn btn-primary post-button danebook-button", role: "Post" %>
    </div>
  </div>
<% end %>