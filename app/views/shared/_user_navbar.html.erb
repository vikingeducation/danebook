<div class="row">
  <header id="profile-header">
    <div class="cover-img">
      <img src="https://s3.amazonaws.com/viking_education/web_development/web_app_eng/hogwarts_small.jpg" alt="Cover Image" class="sr-only">
    </div>
    <h1 class="profile-username"><%= format_user_name(user) %></h1>
    <section class="profile-img">
      <img src="<%= render_profile_img(user.profile) %>" alt="profile">
    </section>
    <section class="col-xs-12 profile-nav">
      <button type="button" aria-expanded="false" class="navbar-toggle">
        <span class="sr-only">"Toggle Navigation"</span>
        <span class="glyphicon glyphicon-menu-down"></span>
      </button>
      <ul class="collapse nav navbar-nav" role="menu">
        <li><%= link_to "Timeline", user_path(user || current_user) %></li>
        <li><%= link_to "About", user_profile_path(user) %></li>
        <li><%= link_to "Photos", user_galleries_path(user) %></li>
        <li><%= link_to "Friends", user_friends_path(user) %></li>
          <li class="edit">
            <% if user == current_user %>
              <%= link_to "Edit Profile", edit_user_profile_path(current_user) %>
            <% end %>
          </li>
      </ul>
    </section>
  </header>
</div>
