  <div class="row">
    <%= image_tag(get_cover_photo(user), size: "2200x300", class: " col-md-12 banner-img") %>
    <h2 class="username-tag"><%= profile.firstname %> <%= profile.lastname %></h2>
  </div>
  <div class="row toolbar">
    <div class="col-md-3 img-handler">
      <%= image_tag(get_profile_photo(user), size: "200x225", class: "profile-image") %>
    </div>
    <div class="col-md-1 nav-links">
      <%= link_to "Timeline", user_posts_path(user) %>
    </div>
    <div class="col-md-1 nav-links current-page">
      <%= link_to "About", user_path(user) %>
    </div>
    <div class="col-md-1 nav-links">
      <%= link_to "Photos(#{user.photos.count})", photos_path %>
    </div>
    <div class="col-md-1 nav-links">
      <%= link_to "Friends(#{count_user_friends(user)})", friending_path(user) %>
    </div>
    <div class="col-md-1 nav-links">
      <%= link_to "Newsfeed", newsfeed_path(user) %>
    </div> 
    <div class="col-md-4 nav-links">
      <%= link_to "Edit Profile", edit_user_path(user) %>
    </div>  
  </div>
