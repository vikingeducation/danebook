<section class='col-sm-12 like-section'>
  <div class='row'>
    <div class='col-sm-1'>
      <%= like_link(post) %>
    </div>

    <a class='col-sm-2 comment-link' href='#'>Comment</a>

    <% if current_user == @user %>
      <%= link_to "Delete", post_path(post, current_user), method: 'delete', class: 'col-sm-1 pull-right', data: {confirm: "Are you sure you want to delete this post?"} %>
    <% end %>

    <div class='col-sm-12'>
      <%= like_sentence(post) %>
    </div>
  </div>
</section>