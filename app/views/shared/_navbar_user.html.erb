<nav class="navbar navbar-default navbar-fixed-top">

  <div class="container">


    <div class="navbar-header">


      <!-- from Bootstrap template: enables nav collapsing -->
      <!-- Brand and toggle get grouped for better mobile display   -->
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>


      <!-- brand image and title -->
      <%= link_to newsfeed_path, class: "navbar-brand brand-text" do %>
        <%= image_tag "danish_flag.gif", class: "img-circle", width: "30", height: "30", alt: "Danish flag logo" %>
        Danebook
      <% end %>

    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">


      <!-- search box -->
      <%= form_tag search_path, :method => 'get', class: 'navbar-form navbar-left', role: 'search' do %>
        <div class="form-group">
          <%= search_field_tag :search, nil, class: 'form-control', placeholder: 'Search for Users' %>
        </div>
        <%= submit_tag 'Search!', class: 'btn btn-info btn-sm' %>
      <% end %>


      <!-- user navigation -->
      <div class="nav navbar-text navbar-right">

        <%= link_to user_path(current_user), class: "brand-text" do %>
          <%= image_tag user_image(current_user), id: 'navbar-photo', alt: "#{current_user.profile.full_name}'s' personal photo" %>
        <% end %>

        <%= link_to "Log Out", logout_path, :method => :delete, class: 'brand-text' %>

      </div>

    </div><!-- /.navbar-collapse -->


  </div>

</nav>


<div class='nav-spacer-user'></div>