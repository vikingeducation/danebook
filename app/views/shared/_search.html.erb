<div class="row">
  <div class="col-md-2">
    <%= display_profile_photo(user, "small") %>
  </div>
  <div class="col-md-8">
    <p><%= link_to user.full_name, user_path(user) %></p>
    <p><%= pluralize(user.friends.count, 'friend') %></p>
    <p>Currently lives in <%= user.profile.current_town %></p>
    <p>From <%= user.profile.hometown %></p>
    <p>Born on <%= user_birthday(user) %></p>
  </div>
  <div class="col-md-2">
    <%= display_friend_button(user) %>
  </div>
</div>
