<article class = "col-sm-12 comment" data-comment-id = "<%= comment.id %>" >
  <div class = "row">
    <div class = "col-sm-2">
      <%= image_tag("user_silhouette_generic.png") %>
    </div>

    <div class = "col-sm-10">

      <div class = "row">

        <p class = "col-sm-12 date-posted">
          <%= user_link(comment.user) %> said on <%= comment.created_at.strftime("%A %m\/%d\/%y") %>
        </p>

        <p class = "col-sm-12 comment-body"><%= comment.body %></p>

        <span class = "col-sm-1">
          <%= like_link(comment, comment.commentable) %>
        </span>

        <span class = "col-sm-6 col-sm-offset-1">
          <%=like_sentence(comment)%>
        </span>
        <span class = "col-sm-2">
          <%= delete_comment_link(comment) %>
        </span>

      </div>
    </div>
  </div>
</article> <!--comment-->