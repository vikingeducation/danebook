<%= render "shared/nav" %>
<%= render "shared/flash" %>

<header class="container">
  <section class="banner row">
    <div class="col-sm-10 col-sm-offset-1 cover-banner" style="background-image: url('<%= display_cover_photo(user) %>')">
      <div class="avatar-lg">

        <%= display_profile_photo(user, "medium") %>

        <h3 class="text-center"><%= user_full_name(user) %></h3>

      </div>

      <div class="friend-button">

        <%= display_friend_button(user) %>

      </div>

    </div>
  </section>
  <section aria-label="..." class="row mid-nav" role="group">

    <%= link_to "Timeline", user_posts_path(user), role: 'button', class: 'btn btn-default col-sm-offset-1 col-sm-2' %>

    <%= link_to "About", user_path(user), role: 'button', class: 'btn btn-default col-sm-2' %>

    <%= link_to user_photos_path(user), role: 'button', class: 'btn btn-default col-sm-2' do %>
      Photos
      <span class="badge"><%= user.photos.count %></span>
    <% end %>

    <%= link_to user_friendings_path(user_id: user.id), role: 'button', class: 'btn btn-default col-sm-2' do %>
      Friends
      <span class="badge"><%= user.friends.count %></span>
    <% end %>

    <% if current_user == user %> 
      <%= link_to "Edit Profile", edit_user_path(user), role: 'button', class: 'btn btn-default col-sm-2' %>
    <% end %>

  </section>
</header>
<br>