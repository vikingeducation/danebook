<%= render 'shared/search_nav' %>
<%= render 'shared/banner_nav' %>

<main class="container">
  <div class="row">
    <!--<header class="col-xs-offset-1 col-xs-10">-->
    <div class="panel panel-default col-xs-offset-1 col-xs-10">
      <!--  -->
      <!--END OF ABOUT/EDIT PROFILE  -->
      <!--  -->
      <br>
      <div class="row bottom-box">
        <!-- ABOUT BOX -->
        <div class="col-md-5">
          <div class="row">
            <div class="col-xs-12">
              <div class="panel panel-default">
                <div class="panel-heading">
                  <h4 class="panel-title text-center">About</h4>
                </div><!--table past-->
                <table class="table table-bordered">
                  <tr>
                    <th>Born on:</th>
                    <td>
                      <%= @user.profile.birthday.strftime("%B %d, %Y") %></h4>
                    </td>
                  </tr>

                  <% if @user.profile.college %>
                  <tr>
                    <th>Went to school at:</th>
                    <td><%= @user.profile.college %></td>
                  </tr>
                  <% end %>

                  <% if @user.profile.hometown %>
                  <tr>
                    <th>Hometown:</th>
                    <td><%= @user.profile.hometown %></td>
                  </tr>
                  <% end %>

                  <% if @user.profile.residing %>
                  <tr>
                    <th>Currently Lives:</th>
                    <td><%= @user.profile.residing %></td>
                  </tr>
                  <% end %>



                </table><!--table past-->
              </div>
            </div>
          </div><!-- ABOUT BOX -->
          <!-- PHOTOS SECTION -->
          <div class="row">
            <div class="col-xs-12">
              <div class="panel panel-default">
                <div class="panel-heading">
                  <h4 class="panel-title text-center">
                    Photos <span class="badge"><%= @user.photos.count %></span>
                  </h4>
                </div><!-- icon_photo_small.png -->

                <table class="table table-bordered row">
                  <% @user.photos.each do |photo| %>
                    <%= link_to user_photo_path(@user, photo), class: "thumbnail word col-xs-4" do %>
                      <%= image_tag photo.picture.expiring_url(10), class: "img-responsive" %>
                    <% end %>
                  <% end %>
                </table>
                <div class="panel-body row">
                  <h5>
                    <% if @user.photos.count > 9 %>
                      <%= link_to "See More Photos", user_photos_path(@user.id), class: "col-xs-12 text-center" %>
                    <% end %>
                  </h5>
                </div>
              </div>
            </div>
          </div><!-- PHOTOS SECTION -->
          <!-- FRIENDS SECTION -->
          <div class="row">
            <div class="col-xs-12">
              <div class="panel panel-default">
                <div class="panel-heading">
                  <h4 class="panel-title text-center">
                    Friends <span class="badge">
                    <%= @user.friended_users.count + @user.users_friended_by.count %></span>
                  </h4>
                </div>


                <table class="table table-bordered row">
                  <% all_friends = @user.friended_users + @user.users_friended_by %>
                    <% all_friends.each do |friend| %>
                      <div class="col-xs-4">
                        <%= link_to user_timeline_path(friend.id), class: "thumbnail" do %>
                        <% if friend.avatar %>
                        <%= image_tag friend.avatar.picture.expiring_url(10, :small), class: "img-thumbnail img-responsive" %>
              <% else %>
                          <%= image_tag "default.gif", class: "thumbnail img-responsive" %>
                <% end %>
                        <h5 class="text-center">
                          <%= "#{friend.profile.first_name} #{friend.profile.last_name}" %>
                        </h5>
                      </div>
                      <% end %>
                    <% end %>

                </table>
                <div class="panel-body row">
                  <h5>
                    <% if @user.friended_users.count > 6 %>
                      <%= link_to "See More Friends", user_friendings_path(@user.id), class: "col-xs-12 text-center" %>
                    <% end %>
                  </h5>
                </div>
              </div>
            </div>
          </div><!-- FRIENDS SECTION -->
        </div><!--  -->
        <!-- END OF LEFT HALF -->
        <!--  -->
        <div class="col-md-7">
          <!--  -->
          <!--  -->
<!-- post creation form -->
          <% if current_user.id == @user.id %>
            <%= render 'posts/post_form' %>
          <% end %>

<!-- old posts, old comments, comment form -->
        <% @posts.reverse.each do |post| %>
          <% if post.persisted? %>
            <%= render partial: 'display_post', locals: { user: @user, post: post } %>
          <% end %>
        <% end %>


      </div>
    </div>
  </div>
</main>
