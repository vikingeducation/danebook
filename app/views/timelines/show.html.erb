<%= render 'shared/search_nav' %>
<%= render 'shared/banner_nav' %>

<main class="container">
  <div class="row">
    <!--<header class="col-xs-offset-1 col-xs-10">-->
    <div class="panel panel-default col-xs-offset-1 col-xs-10">
      <!--  -->
      <!--END OF ABOUT/EDIT PROFILE  -->
      <!--  -->
      <br>
      <div class="row bottom-box">
        <!-- ABOUT BOX -->
        <div class="col-md-5">
          <div class="row">
            <div class="col-xs-12">
              <div class="panel panel-default">
                <div class="panel-heading">
                  <h4 class="panel-title text-center">About</h4>
                </div><!--table past-->
                <table class="table table-bordered">
                  <tr>
                    <th>Born on:</th>
                    <td>
                      <%= @user.profile.birthday.strftime("%B %d, %Y") %></h4>
                    </td>
                  </tr>

                  <% if @user.profile.college %>
                  <tr>
                    <th>Went to school at:</th>
                    <td><%= @user.profile.college %></td>
                  </tr>
                  <% end %>

                  <% if @user.profile.hometown %>
                  <tr>
                    <th>Hometown:</th>
                    <td><%= @user.profile.hometown %></td>
                  </tr>
                  <% end %>

                  <% if @user.profile.residing %>
                  <tr>
                    <th>Currently Lives:</th>
                    <td><%= @user.profile.residing %></td>
                  </tr>
                  <% end %>



                </table><!--table past-->
              </div>
            </div>
          </div><!-- ABOUT BOX -->
          <!-- PHOTOS SECTION -->
          <div class="row">
            <div class="col-xs-12">
              <div class="panel panel-default">
                <div class="panel-heading">
                  <h4 class="panel-title text-center">
                    Photos <span class="badge"><%= @user.photos.count unless 0 %></span>
                  </h4>
                </div><!-- icon_photo_small.png -->

                <table class="table col-xs-12 table-bordered row">
                  <% @user.photos.each do |photo| %>
                    <%= link_to user_photo_path(@user, photo), class: "thumbnail word" do %>
                      <%= image_tag photo.picture.expiring_url(10), class: "img-responsive" %>
                    <% end %>
                  <% end %>
                </table>
                <div class="panel-body row">
                  <h5>
                    <%= link_to "See More Photos", user_photos_path(@user.id), class: "col-xs-12 text-center" %>
                  </h5>
                </div>
              </div>
            </div>
          </div><!-- PHOTOS SECTION -->
          <!-- FRIENDS SECTION -->
          <div class="row">
            <div class="col-xs-12">
              <div class="panel panel-default">
                <div class="panel-heading">
                  <h4 class="panel-title text-center">Friends <span class=
                  "badge"><%= @user.friended_users.count unless 0 %></span></h4>
                </div><!-- icon_photo_small.png -->
                <table class="table table-bordered col-xs-12">
                  <tr>
                    <td class="text-center">
                      <a class="thumbnail" href="#"><img alt=
                      "User's Medium Photo" class="img-responsive" src=
                      "assets/images/user_silhouette_generic.gif"></a>
                      <a href="#">Ron Weasley</a>
                    </td>
                    <td class="text-center">
                      <a class="thumbnail" href="#"><img alt=
                      "User's Medium Photo" class="img-responsive" src=
                      "assets/images/user_silhouette_generic.gif"></a>
                      <a href="#">Ginny Weasley</a>
                    </td>
                    <td class="text-center">
                      <a class="thumbnail" href="#"><img alt=
                      "User's Medium Photo" class="img-responsive" src=
                      "assets/images/user_silhouette_generic.gif"></a>
                      <a href="#">Hermoine Granger</a>
                    </td>
                  </tr>
                  <tr>
                    <td class="text-center">
                      <a class="thumbnail" href="#"><img alt=
                      "User's Medium Photo" class="img-responsive" src=
                      "assets/images/user_silhouette_generic.gif"></a>
                      <a href="#">Warren Buffet</a>
                    </td>
                    <td class="text-center">
                      <a class="thumbnail" href="#"><img alt=
                      "User's Medium Photo" class="img-responsive" src=
                      "assets/images/user_silhouette_generic.gif"></a>
                      <a href="#">Uncle Bob</a>
                    </td>
                    <td class="text-center">
                      <a class="thumbnail" href="#"><img alt=
                      "User's Medium Photo" class="img-responsive" src=
                      "assets/images/user_silhouette_generic.gif"></a>
                      <a href="#">Aunt Sue</a>
                    </td>
                  </tr>
                </table>
                <div class="panel-body row">
                  <h5>
                    <%= link_to "See More Friends", user_friendings_path(@user.id), class: "col-xs-12 text-center" %>
                  </h5>
                </div>
              </div>
            </div>
          </div><!-- FRIENDS SECTION -->
        </div><!--  -->
        <!-- END OF LEFT HALF -->
        <!--  -->
        <div class="col-md-7">
          <!--  -->
          <!--  -->
<!-- post creation form -->
          <% if current_user.id == @user.id %>
            <%= render 'posts/post_form' %>
          <% end %>

<!-- old posts, old comments, comment form -->
        <% @posts.reverse.each do |post| %>
          <% if post.persisted? %>
            <%= render partial: 'display_post', locals: { user: @user, post: post } %>
          <% end %>
        <% end %>


      </div>
    </div>
  </div>
</main>
