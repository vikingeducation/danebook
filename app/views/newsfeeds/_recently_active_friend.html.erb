<div class="row">      
   <div class="col-sm-3">
      <div class="photo-container">
          <%= profile_photo(friend, 'thumb') %>
      </div>
    </div>

    <div class="col-sm-8">
      <div class="row">
        <div class="col-sm-12">
            <strong>
              <%= link_to full_name(friend), user_timeline_path(friend) %>
            </strong>
            <p>
            <%= posted_on(friend.posts.last.created_at) %>
            </p>          
        </div>
      </div>
    </div>  
</div>
