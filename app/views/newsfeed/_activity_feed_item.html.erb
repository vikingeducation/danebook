<header class="media col-xs-12">
  <div class="media-left">
    <%= link_to image_tag(activity.user.avatar(:thumb), class: 'img-thumbnail media-object', alt: 'Missing Avatar'), user_profile_path(activity.user) %>
  </div>
  <div class="media-body">
    <h5 class="media-heading"><%= link_to activity.user.full_name, user_profile_path(activity.user) %></h5>
    <p class="small text-muted"><%= "#{activity.to_text} on #{activity.date}" %></p>
  </div>
</header>