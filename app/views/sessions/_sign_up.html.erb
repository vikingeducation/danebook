<%= form_for user do |f| %>
  <div class="row">
    <div class="form-group col-sm-6">
      <%= f.text_field(:first_name, class: "full-width-input form-control", placeholder: "First Name") %>
    </div>
    <div class="form-group col-sm-6">
      <%= f.text_field(:last_name, class: "full-width-input form-control", placeholder: "Last Name") %>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-sm-12">
      <%= f.email_field(:email, class: "full-width-input form-control", placeholder: "Email") %>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-sm-12">
      <%= f.password_field(:password, class: "full-width-input form-control", placeholder: "Your New Password") %>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-sm-12">
      <%= f.password_field(:password_confirmation, class: "full-width-input form-control", placeholder: "Confirm Password") %>
    </div>
  </div>
  <div class="row">
    <div id="date-picker">
      <div class="form-group col-sm-6 col-xs-8 input-group date">
        <%= f.text_field(:birth_date, class: "form-control", value: "02-02-2002") %>
        <div class="input-group-addon">
            <span class="glyphicon glyphicon-th"></span>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <%= f.submit "Sign Up!", class: "btn btn-success" %>
    </div>
  </div>
<% end %>
