<%= form_for user do |f| %>
  <div class="row">
    <div class="form-group col-sm-6">
      <%= f.text_field(:first_name, class: "full-width-input form-control", placeholder: "First Name") %>
    </div>
    <div class="form-group col-sm-6">
      <%= f.text_field(:last_name, class: "full-width-input form-control", placeholder: "Last Name") %>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-sm-12">
      <%= f.email_field(:email, class: "full-width-input form-control", placeholder: "Email") %>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-sm-12">
      <%= f.password_field(:password, class: "full-width-input form-control", placeholder: "Your New Password") %>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-sm-12">
      <%= f.password_field(:password_confirmation, class: "full-width-input form-control", placeholder: "Confirm Password") %>
    </div>
  </div>
  <div class="row">
    <%
            date_wrap_open = '<div class="col-xs-4"><div class="form-group">'.html_safe
            date_wrap_close = '</div></div>'.html_safe
            date_separator = "#{date_wrap_close}#{date_wrap_open}"
            %>

            <%= date_wrap_open %>

              <%= f.date_select(
                :birth_date,
                {
                  :order => [:day, :month, :year],
                  :date_separator => date_separator,
                  :start_year => Date.today.year,
                  :end_year => 150.years.ago.year
                },
                {:class => 'form-control'}
              ) %>

            <%= date_wrap_close %>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <%= f.submit "Sign Up!", class: "btn btn-success" %>
    </div>
  </div>
<% end %>
