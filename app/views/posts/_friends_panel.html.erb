          <div class="panel panel-default friends">
            <div class="panel-heading ">
              <h3 class="panel-title timeline-panel-header">Friends <span class="grey-text">(<%= @user.friends_count %>)</span></h3>
            </div>
            <div class="panel-body">
              <div class="row">
                <% @user.friends[0..5].each do |friend| %>
                  <div class="col-sm-4">
                    
                    <%= link_to user_posts_path(friend.id), :class => "thumbnail"  do %>

                      <%= image_tag(friend.profile.photo_url, :alt => "") %>
                       <%= friend.full_name %>
                    <% end %>
                  </div>
                  <% end %>
              </div> <!-- end row -->
              <div class="text-center">
                <a href="#" class="text-center">See More Friends</a>
              </div>

            </div>
          </div> <!-- end friends panel-->