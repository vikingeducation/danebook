  <div class="container" id="timeline-page">
    <div class="row">
      <div class="col-sm-7 col-sm-offset-1" id="right-column">
        <div class="row border-3sides" id="posts-section" >
          <header>
            <div class="col-sm-1 small-profile-photo-div">
              <a href="#"><img class="small-profile-photo" src="images/user_silhouette_generic.gif"></a>
            </div>
            <div class="col-sm-4">
              <div class="row">
                <div class="col-sm-12">

                  <a href="#"> <%= @post.author.name %> </a>

                </div>
              </div>
              <div class="row">
                <div class="col-sm-12">

                  Posted on <%= @post.created_at %>

                </div>
              </div>
            </div>
          </header>
        </div>
        <div class="row post-content border-2sides">
          <div class="col-sm-12">

            <p><%= @post.body %></p>

          </div>
        </div>
        <footer class="row border-3sides grey-background">
          <div class="col-sm-12">
            <a href="#" class="footer-link">Like</a>

            <% if @user.id == params[:user_id].to_i %>
            <%= link_to "Delete", user_post_path(@user, @post), method: "delete", class: ["footer-link", "float-right"] %>
            <% end %>

          </div>
        </footer>

        <div class="comment-field row border-2sides border-bottom grey-background">
          <div class="comment">
            <div class="col-sm-1">
              <img src="images/user_silhouette_generic.gif" class="small-profile-photo">
            </div>
            <div class="col-sm-11">
              <%= form_for [@post, @comment] do |comment_field| %>
              <div class="row">
                <div class="col-sm-12">
                  <p><%= comment_field.text_area :body %></p>
                </div>
              </div>
              <div class="row">
                <div class="col-sm-12">
                  <%= comment_field.submit :comment %>
                </div>
              </div>
              <% end %>
            </div>
          </div>
        </div>

        <% @post.comments.each do |comment| %> 
        <% unless comment.body.nil? %>
        <div class="comment-field row border-2sides border-bottom grey-background">
          <div class="comment">
            <div class="col-sm-1">
              <img src="images/user_silhouette_generic.gif" class="small-profile-photo">
            </div>
            <div class="col-sm-11">
              <div class="row">
                <div class="col-sm-12">
                  <p class="grey-out"><%= link_to comment.author.name, user_timeline_path(comment.author) %> Said on <%= comment.created_at %></p>
                </div>
              </div>
              <div class="row">
                <div class="col-sm-12">
                  <p><%= comment.body %></p>
                </div>
              </div>
              <div class="row border-bottom">
                <div class="col-sm-12">
                  <p class="grey-out"><a href="#" class="footer-link">Like</a> 3 other people like this</p>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% end %>
        <% end %>

      </div> 
    </div>  
  </div>
