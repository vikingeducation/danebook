
 <section class="row comments">
    <div class="col-sm-12">
    <hr>
    <div class="col-sm-2">
      <div class="thumbnail">
       <img src="<%= comment.author.profile.photo_url %>">
      </div>
    </div> <!-- col-md-2 end -->

    <div class="col-md-7 poster">
      <a href="#">
        <%=  link_to comment.author.full_name, user_posts_path(comment.author) %>
      </a>
      <span class="grey-text">
        Said on <%= comment.created_at.strftime("%A %m/%d/%y") %>
      </span>
    <p>
      <%= comment.body %>
    </p>
    <div class="clearfix">
       <div class="pull-right">
         <% if comment_poster?(comment) %>
           <%= link_to 'Delete' , comment_path(comment), method: :delete,  data: { confirm: "Are you positive you want to delete this comment?" } %>
         <% end %>
       </div>
       <div class="pull-left">
       <a href="#">Like</a>
        <span class="grey-text">    3 other people like this</span>

       </div>
      </div>
    </div> <!-- col-md-7 end -->
    </div>
  </section> <!-- row end -->