<div class="new-post">
  <% if is_current_user? %>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title text-center"><strong>New Post</strong></h3>
    </div>
    <div class="panel-body">
      <%= form_for @post, remote: true, :html => { id: "post-form" } do |f| %>
      <div class="form-group">
        <%= f.text_area :body, class: "form-control", rows: 8, placeholder: "Anything you want to share today?" %>
      </div>
      <div class="form-group">
        <%= f.submit "Post Confirm", class: "btn btn-lg btn-primary btn-block" %>
      </div>
      <% end %>
    </div>
  </div>
  <% end %>
</div>
