<div class="col-xs-12 post-like">
  <% unless post_liked_by_current_user(p.likes, @post_likes) %>
    <%= link_to "Like", like_post_path(p), class: :like_link, remote: true %></a>
  <% else %>
    <%= link_to "Unlike", unlike_post_path(p), class: :like_link, remote: true %></a>
  <% end %>
  <% if p.user == current_user %>
    <%= link_to "Delete", post_path(p), method: "DELETE", class: "pull-right" %>
  <% end %>
</div>

<div class="col-xs-12">
  <p class="text-muted x-people-like-this"><%= p.likes.size %> people like this</p>
</div>