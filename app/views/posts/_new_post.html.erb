<section class="row section-container" data-type="new-post">
  <div class="col-sm-12 section-header">
    <div class="row">
      <div class="col-sm-6">
        <h4><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Status</h4>
      </div>
    </div>
  </div>
  <%# form_tag posts_path, method: "post", remote: true do |f| %>
  <%= form_for post, remote: true, method: :post do |f| %>
    <div class="col-xs-12">
      <div class="new-post pull-left">
        <%= image_tag(profile_pic_url(user), class: "post-pic", style: "margin-top: 10px;") %>
      </div>
      <div class="col-xs-9 col-sm-10 section-container text-center" style="margin-bottom: 10px;">
        <%= f.text_area :description, class: "btn-block", placeholder: "Tell the world something...", rows: "2" %>
      </div>
    </div>
    <div class="col-sm-12 section-header post-block">
      <div class="row">
        <div class="col-sm-3 col-sm-offset-8">
          <%= f.submit "Post", class: "btn btn-primary btn-block" %>
        </div>
      </div>
    </div>
  <% end %>
</section><!-- New Post section -->
