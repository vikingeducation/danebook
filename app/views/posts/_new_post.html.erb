<div class="col-md-9">
  <div class="panel panel-primary">
    <div class="panel-heading text-center">Post</div>
      <div class="panel-body">
        <%= form_for [user, post], remote: true do |p|  %>
          <%= p.text_area :content, placeholder: "What's on your mind?", class: "new-post-text-area", cols: 62, rows: 7 %></br>
          <%= p.submit "Post to the world!", class: "btn btn-primary center-block" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
