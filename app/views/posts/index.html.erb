<%= render 'shared/profile_header' %>
<section class="row">
  <aside class="col-sm-4 timeline-sidebar">
    <%= render 'info_box_about', profile: @user.profile %>
    <%= render 'info_box_photos' %>
    <%= render 'info_box_friends', friends: @user.friendees, user: @user %>
  </aside>
  <div class="col-sm-8">
    <section class="timeline-feed">
      <%= render 'post_form' %>
      <%= render partial: 'post', collection: @posts, as: :post %>
    </section>
  </div>
</section>