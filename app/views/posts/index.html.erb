<%= render partial: 'shared/navbar' %>
<main>
  <header class = "container" id="cover">

    <%= render partial: 'shared/cover_images' %>

    <!--secondary navbar-->
    <%= render partial: 'shared/second_nav' %>

  </header>

  <section class = "container" id="timeline">
    <div class = "row" id = "information-column">

      <!--details-->
