<%= render partial: 'shared/header', locals: { user: @user } %>

<div class="row">
  <%= render partial: 'timeline_sidebar', locals: { user: @user } %>

  <div class="col-sm-8">
      <%= render 'new_post' if @user == current_user %>

      <% @posts.each do |post| %>
        <%= render partial: 'post', locals: { post: post, user: @user } %> 
      <% end %>
  </div>

</div>


