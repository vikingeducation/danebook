<div class="row">


  <section class="post-content col-xs-11 col-xs-offset-1">
  <!-- User Info -->
    <div class="row">
      <div class="col-sm-2">
        <div class="photo-container">
          <%= profile_photo(user) %>
        </div>
      </div>

      <div class="col-sm-10">
        <strong>
          <%= link_to full_name(post.user), about_user_path(post.user) %>
        </strong>
        <p class="sub-heading"><%= posted_on(post.created_at) %></p>
        <p><%= post.content %></p>
      </div>
    </div>

  </section>



  <section class="post-bar col-xs-11 col-xs-offset-1">

    <%= render partial: 'posts/post_actions', locals: { post: post, user: user } %>

<!-- Comments -->

<div class="col-xs-offset-2 col-xs-10">
    <% post.comments.each do |comment| %>
        <%= render partial: 'comments/comment', locals: { comment: comment } %>
    <% end %>  
</div>

      
    <%= render partial: 'comments/new_comment_form', locals: { commentable: post } %>

  </section>

</div>