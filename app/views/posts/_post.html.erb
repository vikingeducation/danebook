<% if post.persisted? %>
<article class="panel panel-default comments">
  <div class="panel-body">
    <div class="row">
      <div class="col-sm-2">
        <div class="thumbnail">
         <img src="<%= post.user.profile.photo_url %>">
       </div>
     </div> <!-- col-md-2 end -->

     <div class="col-md-7 poster">
       <%= link_to "#{post.user.first_name} #{post.user.last_name}", user_posts_path(post.user.id) %>
       <p class="grey-text">
        Posted on <%= post.created_at.strftime("%A %m/%d/%y") %>
      </p>
    </div>
  </div> <!-- row end -->
  <div class="row">
    <div class="col-md-12">
      <p><%= post.body %></p>
    </div>
  </div>
</div>

<div class="panel-footer clearfix">

  <div class="pull-right">
    <% if current_user &&  post.user.id == current_user.id %>
    <%= link_to 'Delete' , user_posts_path(post), method: :delete,  data: { confirm: "Are you positive you want to delete this post?" } %>
    <% end %>
  </div>
  <div class="pull-left">
     <%= like_or_unlike(post) %>

  </div>
  <br>
    <div class="pull-left liked">
      <%= like_maker(post) %>
    </div>
    <%= render partial: "comments/comment_form", locals: {parent: post, user_id: @user.id} %>
  </div>

  <% unless post.comments.empty? %>
  <%= render :partial=>'comment' , 
  :locals=>{:comment => post.comments},
  :collection => post.comments %>
  <% end %>


</article> <!-- end comment panel -->
<% end %>

<script type='text/javascript'>
  var ready;

ready = function() {      
$("#comment").hide();
      $("#comment_link`").click(function(event) {
          event.preventDefault();
          $("#comment").toggle();};

$(document).ready(ready);

$(document).on('page:load', ready);

</script>













