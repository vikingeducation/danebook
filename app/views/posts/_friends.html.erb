<div class=" panel panel-default">

  <div class="panel-heading">

    <h3 class="panel-title text-center">
      Friends <small>(<%= user.friended_users.count %>)</small>
    </h3>

  </div>


  <div class="panel-body">


    <div class="row thumbnail-row">
      <%= render :partial => 'posts/friend', :collection => friends[0..2] %>
    </div>
    <div class="row thumbnail-row">
      <%= render :partial => 'posts/friend', :collection => friends[3..5] %>
    </div>


    <div class="row">

      <div class="col-xs-12 text-center">

        <%= link_to "See More Friends", user_friends_path(user.id), alt: "See more friends" %>

      </div>

    </div>

  </div> <!-- end of panel body -->

</div> <!-- end of panel -->