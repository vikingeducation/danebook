<aside class = "col-sm-4" id = "details">
  <section class = "row" id = "timeline-about">
    <header class="col-sm-12">
        <h4>About</h4>
    </header>


    <table class = "table about-table col-sm-12">
      <tr>
        <td>Born on:</td>
        <td><%= @user.profile.birthday %></td>
      </tr>
      <tr>
        <td>Went to school at:</td>
        <td><%=@user.profile.college%></td>
      </tr>
      <tr>
        <td>Hometown:</td>
        <td><%=@user.profile.hometown %></td>
      </tr>
      <tr>
        <td>Currently Lives:</td>
        <td><%=@user.profile.currently_lives %></td>
      </tr>
    </table>
  </section>

  <section class = "row" id= "timeline-photos">
    <header class="col-sm-12">
        <h4>Photos (<%= @user.photos.count %>)</h4>
    </header>

    <% @user.photos.each_with_index do |photo, index| %>
      <% break if index >= 9 %>
      <%= render partial: "shared/photo_nohover", locals: { photo: photo } %>
    <% end %>

  </section><!--photos-->

  <section class = "row" id = "timeline-friends">
    <header class="col-sm-12">
        <h4>Friends: <%= @user.friends.count %></h4>
    </header>


    <% @friends.each_with_index do |friend, index| %>
      <% break if index >= 9 %>
      <%= render partial: "shared/friend_thumbnail", locals: {friend: friend} %>
    <% end %>

  <div class="col-sm-12">
    <%= link_to "See more friends", user_friends_path(@user) %>
  </div>
  </section>

</aside>
