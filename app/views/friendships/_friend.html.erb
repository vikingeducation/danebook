<div class="col-md-6">
  <div class="friend-item">
    <div class="media">
      <div class="media-left">
        <a href="#">
          <%=  image_tag('user_silhouette_generic.png', alt: 'Generic User Silhouette', class: 'media-object img-thumbnail')  %>
        </a>
      </div>
      <div class="media-body media-middle">
        <div class="media-heading">
          <h4 class="h5"><%= link_to friend.full_name, user_profile_path(friend) %></h4>
          <p class="text-muted"><%= friend.friendships_count %> Friends</p>
        </div>
      </div>
      <div class="media-right media-middle">
        <%=  link_to "Remove Friend", friend_path(friend), method: :delete, class: 'btn btn-dull' if is_self? %>
      </div>
    </div>
  </div>
</div>