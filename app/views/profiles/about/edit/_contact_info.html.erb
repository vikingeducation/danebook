<h1 class="heading">Contact Information</h1>

<div id="contact-info-table">

  <div class="form-group">
    <p class="error-msg"><%= display_form_errors(@current_user, :email) %></p>
    <%= user_fields.label :email %>
    <%= user_fields.text_field :email %>
  </div>

  <div class="form-group" id="telephone-group">
    <p class="error-msg"><%= display_form_errors(profile, :telephone) %> </p>
    <%= profile_fields.label :telephone %>
    <%= profile_fields.text_field :telephone %>
  </div>

</div>
