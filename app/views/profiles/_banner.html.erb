<div class="container">
  <div class="row" id="cover-photo">
    <div class="col-sm-10 username">
      <a href="#"><%= image_tag("harry_potter_small.jpg", id: "profile-pic") %></a>
      <h1><%= @user.full_name %></h1>
    </div>
  </div>
  <div class="row link-bar">
    <div class="col-sm-7 col-sm-offset-2" role="navigation">
      <ul class="nav nav-pills nav-justified">
        <li role="presentation"><%= link_to "Timeline", user_timeline_path(@user) %></li>
        <li role="presentation"  class= "active-tab"><%= link_to "About", user_profile_path(user) %></li>
        <li role="presentation"><%= link_to user_photos_path(@user) do %>
            Photos <span class="small-grey">(123)</span>
          <% end %></li>
        <li role="presentation"><%= link_to user_friends_path(@user) do %>
          Friends <span class="small-grey">(542)</span>
        <% end %></li>
      </ul>
    </div><!-- Nav Menu -->
    <div class="float-right">
      <% if current_user.friended_users.pluck(:id).include?(@user.id)%>
        <%= button_to "Unfriend", friending_path(user.id, :current_user_id => current_user.id), :method => :delete %>
      <% elsif @user.id == current_user.id %>
      <% else %>
        <%= button_to "Friend",
              friendings_path(:id => user.id, :current_user_id => current_user.id),
              :method => "POST" %>
      <% end %>
    </div>
  </div><!-- Link bar -->
</div> <!-- Banner Container -->
