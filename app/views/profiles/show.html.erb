<main>
	<div class="container">

  	<%= render partial: 'layouts/cover_and_profile_banner' %>

		<div class="row">
    	<%= render 'layouts/navbar' %>
  	</div>

		<section class="panel panel-default panel-custom">

			<div class="panel-heading clearfix">
				<% if object_owner? %>
					<%= link_to "Edit your profile", edit_user_profile_path(:user_id => @profile.user.id), class: "btn btn-primary btn-sm pull-right" %>
				<% else %>
					<%= link_to "Add Friend", user_friendships_path(:user_id => @profile.user.id), class: "btn btn-primary btn-sm pull-right", method: :post %>
				<% end %>
				<h4 class="panel-text text-center">About</h4>
			</div><!-- end of panel -->

			<div class="panel-body">
				<div class="row about-info">
					<div class="col-sm-5">
						<h3>Basic Information</h3>

						<dl class="dl-horizontal">
							<dt class="basic-info">Birthday:</dt>
							<dd><%= @profile.user.birthday.strftime("%B %d, %Y") if @profile.user.birthday %></dd>
							<dt class="basic-info">College:</dt>
							<dd><%= @profile.college %></dd>
							<dt class="basic-info">Hometown:</dt>
							<dd><%= "#{@profile.home_city}, #{@profile.home_country}" %></dd>
							<dt class="basic-info">Currently Lives:</dt>
							<dd><%= "#{@profile.current_city}, #{@profile.current_country}" %></dd>
						</dl>

						<h3>Contact Information</h3>

						<dl class="dl-horizontal">
							<dt class="basic-info">Email:</dt>
							<dd><%= @profile.user.email %></dd>
							<dt class="basic-info">Telephone:</dt>
							<dd><%= @profile.telephone %></dd>
						</dl>
					</div>

					<div class="col-sm-7">
						<div>
							<h3>Words to Live By</h3>
							<p><%= @profile.words_to_live_by %></p>
						</div>
						<div>
							<h3>About Me</h3>
							<p><%= @profile.about_me %></p>
						</div>
					</div>
				</div>
			</div>
		</section>

	</div>

</main>