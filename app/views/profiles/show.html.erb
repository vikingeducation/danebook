<main class="main">

 <%= render partial: 'profiles/profile_header_and_links', locals: { user: find_current_page_user } %>

  <div class="container">

    <div class="row bar-div">

      <header class="bar">
        <h1 class="about-title">About</h1>
        <% if find_current_page_user == @current_user %>
          <%= link_to "Edit Your Profile", edit_user_profile_path, method: :get, class: "white-text edit pull-right btn btn-primary" %>
        <% end %>
      </header>
      
    </div>


    <div class="info-section row">

      <div class="col-md-6">

        <%= render partial: 'profiles/about/leftside', locals: { user: find_current_page_user } %>

      </div>

      <div class="col-md-6">

        <%= render partial: 'profiles/about/rightside', locals: { user: find_current_page_user } %>

      </div>

    </div>

  </div>

</main>
