<%= render 'shared/search_nav' %>
<%= render 'shared/banner_nav' %>

<main class="container">
  <div class="row">
    <div class="panel panel-default col-xs-offset-1 col-xs-10">
      <div class="panel-heading row">
        <div class="panel-title">
          <h2 class="text-center">About</h2>
        </div>
      </div>


      <%= form_for [@user, @profile] do |profile_builder| %>
      <div class="panel-body">
        <div class="row bottom-box">
          <div class="col-md-6 col1">
            <div class="row">
              <div class="col-xs-12">
                <h3>Basic Information</h3>
              </div>
            </div>
            <div class="row">
              <div class="col-xs-6">
                <p><strong>Birthday:</strong></p>
              </div>
              <div class="col-xs-6">
                <p><%= @profile.birthday.strftime("%B %d, %Y") %>
                                              </p>
              </div>
            </div>
            <div class="row">
              <div class="col-xs-6">
                <p><strong>College:</strong></p>
              </div>
              <div class="col-xs-6">
                <%= profile_builder.label :college %>
                <%= profile_builder.text_field :college %>
              </div>
            </div>
            <div class="row">
              <div class="col-xs-6">
                <p><strong>Hometown:</strong></p>
              </div>
              <div class="col-xs-6">
                <%= profile_builder.label :hometown %>
                <%= profile_builder.text_field :hometown %>
              </div>
            </div>
            <div class="row">
              <div class="col-xs-6">
                <p><strong>Currently Lives:</strong></p>
              </div>
              <div class="col-xs-6">
                <%= profile_builder.label :residing %>
                <%= profile_builder.text_field :residing %>
              </div>
            </div><!--  -->
            <!--END OF BASIC INFORMATION  -->
            <!--  -->
            <div class="row">
              <div class="col-xs-12">
                <h3>Contact Information</h3>
              </div>
            </div>
            <div class="row">
              <div class="col-xs-6">
                <p><strong>Email:</strong></p>
              </div>
              <div class="col-xs-6">
                <p><%= @user.email %></p>
              </div>
            </div>
            <div class="row">
              <div class="col-xs-6">
                <p><strong>Telephone:</strong></p>
              </div>
              <div class="col-xs-6">
                <%= profile_builder.label :phone %>
                <%= profile_builder.text_field :phone %>
              </div>
            </div>
          </div><!--  -->
          <!-- END OF LEFT HALF -->
          <!--  -->
          <div class="col-md-6 col2">
            <div class="row">
              <div class="col-xs-12">
                <!-- <h3>Words to Live By</h3> -->
              </div>
            </div>
            <div class="row">
              <div class="col-xs-12">
                <h3><%= profile_builder.label :motto, "Words to Live By" %></h3>
                <%= profile_builder.text_area :motto, cols: "30", rows: "10" %>
              </div>
            </div>
            <div class="row">
              <div class="col-xs-12">
                <!-- <h3>About Me</h3> -->
              </div>
            </div>
            <div class="row">
              <div class="col-xs-12">
                <h3><%= profile_builder.label :about, "About Me" %></h3>
                <%= profile_builder.text_area :about, cols: "30", rows: "10" %>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-12 text-center rs30">
              <%= profile_builder.submit "Save Changes", class: 'btn btn-lg btn-success' %>

<% end %>
            </div>
          </div>
        </div><!--Panel content-->

      </div>
    </div>
  </div>
</main>
