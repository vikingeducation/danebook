<main>
  <%= render partial: "./users/info" %>

    <!-- This row will hold the "About" Information. -->
    <!-- The info-section and info-section-topbar css classes are re-used for about_edit and about -->
    <div class="row info-section">
      <div class="col-md-12">
        <!-- This row holds the top bar of the about section -->
        <div class="row info-section-topbar">
          <div class="col-md-2 col-md-offset-5">
            <h2>About</h2>
          </div>
        </div>
        <%= form_for [current_user, @profile] do |f| %>
          <div class="row">
            <div class="col-md-5">
              <div class="row">
                <div class="col-md-12">
                  <div class="center"><h3>Basic Information</h3></div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-4">
                  <b>Birthday:</b>
                </div>
                <div class="col-md-8">
                  <%= current_user.dob %>
                </div>
              </div>
              <div class="row">
                <div class="col-md-4">
                  <b>College:</b>
                </div>
                <div class="col-md-8">
                  <%= f.label :college_name %>
                  <%= f.text_field :college_name %>
                </div>
              </div>
              <div class="row">
                <div class="col-md-4">
                  <b>Hometown:</b>
                </div>
                <div class="col-md-8">
                  <%= f.label :hometown %>
                  <%= f.text_field :hometown %>
                </div>
              </div>
              <div class="row">
                <div class="col-md-4">
                  <b>Currently Lives:</b>
                </div>
                <div class="col-md-8">
                  <%= f.label :current_home %>
                  <%= f.text_field :current_home %>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12">
                  <div class="center"><h3>Contact Information</h3></div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-4">
                  <b>Email:</b>
                </div>
                <div class="col-md-8">
                  <!-- <input type="text" name="user[email]" value="<%=current_user.email%>" -->
                  <%= current_user.email %>
                </div>
              </div>
              <div class="row">
                <div class="col-md-4">
                  <b>Telephone:</b>
                </div>
                <div class="col-md-8">
                  <%= f.label :telephone %>
                  <%= f.text_field :telephone %>
                </div>
              </div>
            </div>

            <div class="col-md-7">
              <div class="row about-right-col">
                <div class="col-md-12">
                  <div class="center"><h2>Words to Live By</h2></div>
                </div>
                <div class="col-md-12">
                  <%= f.label :words_to_live_by %>
                  <%= f.text_area :words_to_live_by %>
                </div>
                <div class="col-md-12">
                  <div class="center"><h2>About Me</h2></div>
                </div>
                <div class="col-md-12">
                  <%= f.label :about_me %>
                  <%= f.text_area :about_me %>
                  
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-8 col-xs-offset-2">
              <%= f.submit "Save Changes", class:"btn btn-primary update-profile-btn"%>
            </div>
          </div>
        <% end %>
      </div>

  </div>
</main>