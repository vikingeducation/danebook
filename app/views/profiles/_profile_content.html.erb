<section class="info-pane col-md-12">
  <header class="row">
    <div class="col-md-12">
      <h2>About</h2>
    </div>
  </header>

  <section class = "row">
    <div class = "col-md-6">
      <h3>Basic Information</h3>
      <table class="table">
        <tr>
          <td>Birthday:</td>
          <td><%= @user.birthday %></td>
        </tr>
        <tr>
          <td>College:</td>
          <td><%= @profile.school %></td>
        </tr>
        <tr>
          <td>Hometown:</td>
          <td><%= @profile.hometown %></td>
        </tr>
        <tr>
          <td>Currently Lives:</td>
          <td><%= @profile.current_town %></td>
        </tr>
      </table>

      <h3>Contact Information</h3>
      <table class="table">
        <tr>
          <td>Email:</td>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <td>Telephone:</td>
          <td><%= @profile.phone_number %></td>
        </tr>
      </table>

    </div>

    <div class = "col-md-6">
      <h3>Words to live by</h3>
      <p><%= @profile.quotes %></p>
      <h3>About me</h3>
      <p><%= @profile.about %></p>
    </div>
  </section>

  <footer class="row">
    <%= edit_profile_button(@user, "btn btn-large btn-danish btn-block") %>
  </footer>
</section>