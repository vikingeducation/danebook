<div id="static_pages">
	<%= render 'shared/navbar' %>

	<%= render 'shared/banner', user: @user %>

  <div class="container section-container">
    <div class="row section-header">
      <div class="col-sm-8 col-sm-offset-2">
        <h2 class="text-center">Photo</h2>
      </div>
    </div>
    <div class="col-sm-12">
	    <div class="row post-wrapper">
	      <div class="col-xs-2 col-sm-1">
	        <%= image_tag("harry_potter_small.jpg", class: "post-pic") %>
	      </div>
	      <div class="col-xs-9 col-sm-10 friend-name-wrapper">
	        <p><%= link_to @user.full_name, user_profile_path(@user, @user.profile), class: "like-link" %></p>
	        <p>Posted on <%= @photo.updated_at.strftime("%A %-m/%-d/%Y") %></p>
	      </div>
	    </div>
    <div class="row">
      <div class="col-sm-10 col-sm-offset-1 photo-container">
        <figure>
            <%= image_tag( @photo.file.url :large, class: "friend-img") %>
        </figure>
        <p class="text-left">
          Uploaded <%= @photo.created_at.strftime('%b %d, %Y') %>
        </p>
        <p>
          <% if signed_in_user? && current_user == @user %>
            <%= form_for @user do |f| %>
              <%= f.hidden_field :profile_pic_id, value: @photo.id %>
              <%= f.submit "Make Profile Pic", class: "btn btn-primary" %>
            <% end %>
            <%= form_for @user do |f| %>
              <%= f.hidden_field :cover_pic_id, value: @photo.id %>
              <%= f.submit "Make Cover Picture", class: "btn btn-primary" %>
            <% end %>
          <% end %>
          <%# TODO: Add styling to photos show page %>
        </p>
      </div>
    </div><!-- Photo Wrapper -->
    <div class="row post-wrapper">
      <div class="col-xs-12">
        <p class="post-content"><%= @photo.description %></p>
      </div>
    </div>
    <div class="row post-wrapper section-footer">
        <% if @photo.likers.include?(current_user) %>
          <div class="col-xs-7 col-sm-4">
            <%= button_to "Unlike", like_path( user_liked_id(@photo)), method: :delete, class: "goofy-btn unlike-class", id: "unlike-id"%>
          </div>
        <% else %>
          <div class="col-xs-7 col-sm-7">
            <%= button_to "Like", photo_likes_path(@photo), method: :post, class: "goofy-btn like-class" %>
          </div>
        <% end %>

        <% if @user == current_user %>
          <div class="col-xs-4 col-sm-4 text-right">
            <%= button_to("Delete", @photo, method: :delete, class: "goofy-btn delete-class") %>
          </div>
        <% end %>

      <% unless @photo.likers.empty? %>
        <div class="col-xs-12 like-listing-expanded hr-block">
            <p><%= print_likers(@photo) %></p>
        </div>
      <% end %>
      <hr>
      <div class="col-xs-12">
        <div class="row post-wrapper">
          <%# unless @photo.comments.length == 1 %>
            <% @photo.comments[0..6].each_with_index do |comment, index| %>

                  <%= render 'comment', comment: comment, post: @photo, index: index %>

            <% end %>
          <%# end %>
            <%= render 'new_comment_form', post: @photo %>
          </div><!-- Comment content wrapper -->
        </div><!-- Comment wrapper -->
      </div>
    </div>
  </div><!-- Contentt Section -->
</div>
