<div id="static_pages">
	<%= render 'navbar' %>

	<%= render 'banner', user: @user %>

  <div class="container section-container">
    <div class="row section-header">
      <div class="col-sm-8 col-sm-offset-2">
        <h2 class="text-center">Photo</h2>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-10 col-sm-offset-1 photo-container">
        <figure>
            <%= image_tag( @photo.file.url :large, class: "friend-img") %>
        </figure>
        <p class="text-left">
          Uploaded <%= @photo.created_at.strftime('%b %d, %Y') %>
        </p>
        <p>
          <% if signed_in_user? && current_user == @user %>
            <%= form_for @user do |f| %>
              <%= f.hidden_field :profile_pic_id, value: @photo.id %>
              <%= f.submit "Make Profile Pic", class: "btn btn-primary" %>
            <% end %>
            <%= form_for @user do |f| %>
              <%= f.hidden_field :cover_pic_id, value: @photo.id %>
              <%= f.submit "Make Cover Picture", class: "btn btn-primary" %>
            <% end %>
          <% end %>
          <%# TODO: Add styling to photos show page %>
        </p>
      </div>
    </div><!-- Photo Wrapper -->
  </div><!-- Contentt Section -->
</div>
