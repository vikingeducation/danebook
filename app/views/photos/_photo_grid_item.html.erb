<div class="col-xs-4 col-sm-3">
  <figure class="photo-item">
    <%= link_to photo_path(photo) do %>
      <div class="photo-bg" style="background-image: url('<%= photo.image.url(:thumb) %>')"></div>
    <% end %>
    <figcaption><span>Uploaded <%= photo.upload_date %></span></figcaption>
  </figure>
</div>