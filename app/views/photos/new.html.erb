<main id="new-photo-page">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <div class="row">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title col-xs-1 col-xs-offset-5" id="about-panel-title">Photos</h3>
            <div class="spacer"> </div>
          </div>
          <div class="panel-body">
            <div class="col-xs-8 col-xs-offset-2 panel-content photos-upload">
              <div class="col-xs-10 col-xs-offset-1">
                <%= form_for Photo.new do |photo_fields| %>
                  <%= photo_fields.label :image, 'Paste the URL to a photo on the web...' %>
                  <%= photo_fields.text_field :url, placeholder: 'http://example.com/photo1.jpg', class: 'form-control col-xs-10' %>
                  <%= photo_fields.submit 'Use Web Photo', class: 'btn btn-primary col-xs-4 col-xs-offset-4' %>
                <% end %>
              </div>
              <%= content_tag(:h1, 'or..', class: 'or-label col-xs-12') %>
              <div class="col-xs-10 col-xs-offset-1">
                <%= form_for Photo.new do |photo_fields| %>
                  <%= photo_fields.label :image, 'Select a photo from your hard drive...', class: 'select-photo-label'%>
                  <div class="col-xs-4 col-xs-offset-4" id="photo_attachment_container">
                    <div class='wrapper'>
                      <%= photo_fields.file_field :image %>
                    </div>
                    <button class="btn btn-success">Select a file</button>
                  </div>
                  <%= photo_fields.submit 'Submit', class: 'btn btn-primary col-xs-4 col-xs-offset-4' %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>
</main>
