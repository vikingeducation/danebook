       <%= render 'shared/profile_header' %>
<section class="row">
  <div class="col-xs-12">
    <div class="info-box row">
      <header class="col-xs-12">
        <h2 class="module-title">Photos</h2>
      </header>
      <div class="col-xs-12 text-center">
        <p class="h5">Paste the URL to a photo on the web...</p>
        <%= form_for [@user, @photo] do |f| %>
          <%= f.text_field :image, class: 'form-control', value: '' %>
          <%= f.submit 'Use Web Photo', class: 'btn btn-primary mts' %>
        <% end %>
        <p class="h5">Select a photo from your hard drive...</p>
        <%= simple_form_for [@user, @photo] do |f| %>
          <%= f.file_field :image, accept: 'image/png,image/gif,image/jpeg' %>
          <%= f.submit 'Upload Photo', class: 'btn btn-success mbs' %>
        <% end %>
      </div>
    </div>
  </div>
</section>