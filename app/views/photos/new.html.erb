<div class="col-md-6 col-md-offset-3">
<%= form_for [current_user, user_photo_url], html: { :multipart => true } do |f| %>
  <div class="form-group">
    <%= f.label :filename, "Your photo's name" %> <br>
    <%= f.text_field :filename, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :caption, "Your photo's caption" %> <br>
    <%= f.text_field :caption, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :file %> <br>
    <%= f.file_field :file, class: '' %>
  </div>

  <div class="form-group">
    <%= f.submit 'Upload Photo', class: 'btn btn-primary' %>
  </div>
<% end %>
</div>