<main class="container content-container">

  <%= render :partial => "shared/header", :locals => { :user => @user } %>



<!-- Start of main About section -->
  <section id="photos" class="row">

    <div class="row">
      <div class="col-md-12">

        <div class="panel panel-default">


          <div class="panel-heading">
            <div class="row">

              <div class="col-xs-4 col-xs-offset-4 text-center">
                <h1 class="panel-title">Photos</h1>
              </div>

            </div>

          </div> <!-- end of panel heading -->




          <div class="panel-body">
            <div class="row">



              <div class="col-md-8 col-md-offset-2 text-center">
                <%= form_for [@user, @photo] do |f| %>
                  <h3>
                    Paste the URL to a photo on the web...
                  </h3>

                  <div class='form-group'>
                    <%= f.text_field :photo_from_url, placeholder: "http://example.com/photo1.jpg", class: 'form-control' %>
                  </div>

                  <%= f.submit 'Use Web Photo', class: 'btn btn-primary' %>

                <h2>or...</h2>

                <h3>
                  Select a photo from your hard drive...
                </h3>

                  <%= f.file_field :photo %>

                  <%= f.submit 'Upload!', class: 'btn btn-primary' %>
                <% end %>
              </div>

            </div>

          </div> <!-- end of panel body -->



        </div> <!-- end of panel -->

      </div>
    </div>
  </section>




</main> <!-- container -->