<div id="static_pages">
	<%= render 'shared/navbar' %>
	<%= render 'shared/banner', user: @user %>
	<div class="container">
		<%= render 'shared/flash' %>
	</div>
	<div class="container section-container">
		<div class="row section-header">
			<div class="col-sm-8 col-sm-offset-2">
				<h2 class="text-center">Photos</h2>
			</div>
			<div class="col-sm-2 edit-btn">
				<% if current_user == @user %>
					<%= link_to "Add Photo", new_user_photo_path, class: "btn btn-primary btn-block" %>
				<% end %>
			</div>
		</div>
		<div class="row">
			<% @photos.each do |photo| %>
				<div class="col-sm-4 col-md-3 photo-container">
					<%= render 'photo', photo: photo, user: @user, size: "medium" %>
				</div>
			<% end %>
		</div><!-- Photo Wrapper -->
	</div><!-- Contentt Section -->
</div>
