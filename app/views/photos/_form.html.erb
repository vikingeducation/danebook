<div class="well form-container">  
  <h3 class="text-center">
    Paste a url from a photo on the web..
  </h3>

  <%= form_for([current_user, photo]) do |f| %>
    <div class="form-group url-field-container">
      <%= f.text_field(:file, :class => 'form-control', :placeholder => 'http://example.com/photo.jpg', :value => nil) %>
    </div>
    <%= f.hidden_field(:user_id, :value => current_user.id) %>
    <div class="submit-container text-center">
      <%= f.submit('Upload from URL', :class => 'btn btn-primary btn-lg') %>
    </div>
  <% end %>

  <h2 class="text-center">
    ..or
  </h2>

  <h3 class="text-center">
    ..upload a photo from your computer.
  </h3>

  <%= form_for([current_user, photo]) do |f| %>
    <div class="file-field-container">
      <%= f.file_field(:file, :accept => 'image/png,image/gif,image/jpeg') %>
    </div>
    <%= f.hidden_field(:user_id, :value => current_user.id) %>
    <div class="submit-container text-center">
      <%= f.submit('Upload from File', :class => 'btn btn-primary btn-lg') %>
    </div>
  <% end %>
</div>

