<div class="new-photo-wrap">

<div class="new-photo">

<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title text-center"><strong>New Photo</strong></h3>
  </div>
  <div class="panel-body">

    <section>
      <h3 class="text-center"><strong>Uploading local file</strong></h3>
      <%= form_for photo do |f| %>
      <div class="form-group">
        <%= f.file_field :picture, class: "form-control input-lg" %>
      </div>
      <div class="form-group text-center">
        <%= f.submit "Upload Photo", class: "btn btn-lg btn-primary " %>
      </div>
      <% end %>
    </section>

    <hr>
    <h2 class="text-center"><strong>Or</strong></h2>
    <hr>

    <section>
      <h3 class="text-center"><strong>Using image link</strong></h3>
      <%= form_tag new_link_photo_path do %>
      <div class="form-group">
        <%= text_field_tag :image_url, '',class: "form-control text-center input-lg", placeholder: "give it a full image url link" %>
      </div>
      <div class="form-group text-center">
        <%= submit_tag "Add Photo",class: "btn btn-lg btn-danger" %>
      </div>
      <% end %>
    </section>
    <a href="#" class="closeLightBox">Click to close</a>

  </div>
</div>

</div>

</div>
