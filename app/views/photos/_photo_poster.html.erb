<div class="row">
  <div class="col-sm-12">

  <div class="photo-poster">
      <div class="col-sm-3">
        <div class="row">
          <div class="profile-photo">
            <%= profile_photo(photo.user, 'thumb') %>
          </div>        
        </div>
      </div>

      <div class="col-sm-8">
        <div class="row">
          <strong><%= link_to full_name(photo.user), about_user_path(photo.user) %></strong>
          <p><%= posted_on(photo.created_at) %></p>            
        </div>
    
      </div>  
    </div>

  </div>      
</div>