<%= content_for :usernav, true %>

<section class="post col-xs-12">
  <div class="row">
    <header class="post-header col-xs-12">
      <%= link_to "Delete Notice", notice_path(@notice), method: :delete, class: "edit-button btn btn-primary" %>
      <h2>Notice</h2>
    </header>
  </div>
  <div class="row">
    <section class="post-content col-xs-12">
      <div class="row">
        <div class="information col-md-5">
          <h3><%= @notice.title %></h3>
          <% @notice.messages.each do |msg| %>
            <p><%= msg.html_safe %></p>
          <% end %>
        </div>
    </section>
  </div>

</section>
