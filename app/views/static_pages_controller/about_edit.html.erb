<%= render partial: "static_pages_controller/navbar" %>
<main>

  <!-- Profile Header -->

  <%= render partial: "static_pages_controller/menu", :locals => { :active => 'About' }  %>

  <!-- /profile header -->


  <!-- Main Content -->

  <div class="container">

    <div class="row test">

      <div class="col-xs-6 col-xs-offset-3">

        <h3>Edit Your Profile</h3>

      </div>

    </div>

    <div class="row main-content">

      <div class="col-md-6">

        <div class="row">

          <div class="col-xs-12">

            <h3>Basic Information</h3>

          </div>

          <div class="col-xs-6">

            <strong>Birthday:</strong>

          </div>

          <div class="col-xs-6">

            <input type="text" class="form-control">

          </div>

          <div class="col-xs-6">

            <strong>College:</strong>

          </div>

          <div class="col-xs-6">

            <input type="text" class="form-control">

          </div>

          <div class="col-xs-6">

            <strong>Hometown:</strong>

          </div>

          <div class="col-xs-6">

            <input type="text" class="form-control">

          </div>

          <div class="col-xs-6">

            <strong>Currently Lives:</strong>

          </div>

          <div class="col-xs-6">

            <input type="text" class="form-control">

          </div>

          <div class="col-xs-12">

            <h3>Contact Information</h3>

          </div>

          <div class="col-xs-6">

            <strong>Email:</strong>

          </div>

          <div class="col-xs-6">

            <input type="text" class="form-control">

          </div>

          <div class="col-xs-6">

            <strong>Telephone:</strong>

          </div>

          <div class="col-xs-6">

            <input type="text" class="form-control">

          </div>

        </div>

      </div>

      <div class="col-md-6">

        <div class="row row-last">

          <div class="col-xs-12">

            <h3>Words to Live By</h3>

          </div>

          <div class="col-xs-12">

            <textarea rows="4" class="form-control"></textarea>

          </div>

          <div class="col-xs-12">

            <h3>About Me</h3>

          </div>

          <div class="col-xs-12">

            <textarea rows="4" class="form-control"></textarea>

          </div>

        </div>

      </div>

      <div class="col-xs-8 col-xs-offset-2 btn-save-changes">

          <button class="btn btn-lg btn-primary" type="submit">Save Changes</button>

      </div>

      <div class="col-xs-2">
      </div>

    </div>

  </div>

</main>
