<hr>
    <div class="row">
        <div class="media-left media-middle col-xs-offset-1 col-xs-2">
                <figure>
                  <% if @user.avatar %>
                  <%= image_tag @user.avatar.picture.expiring_url(10, :small), class: "img-thumbnail img-responsive" %>
<% else %>
                    <%= image_tag "default.gif", class: "thumbnail img-responsive" %>
          <% end %>
                </figure>
        </div>
        <div class="media-body col-xs-8 col-xs-offset-1">
            <a href="#">
                <h4 class="media-heading"><%= "#{full_name_by_id(comment.user_id)}" %></h4>
            </a>
            <h6>
                <%= "Posted on #{comment.created_at.strftime('%B, %d, %Y')}" %>
            </h6>
        </div>
    </div>
    <div class="row">
        <p class="col-xs-10 col-xs-offset-1">
          <%= comment.body %>
        </p>
    <div class="row">
      <div class="col-xs-1">

      </div>
    </div>
  </div>
<hr>
