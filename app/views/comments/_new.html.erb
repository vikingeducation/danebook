<div class="panel panel-default">

  <%= form_for [current_user, new_comment], remote:true do |c| %>

  <div class="panel-body">
    <div class="form-group">
      <%= c.label "Comment" %>
      <%= c.text_area :body, class: "form-control",  placeholder: "Write a comment" %>
    </div>
  </div>

  <div class="panel-footer clearfix">
  	<%= c.hidden_field :commentable_id, :value => commentable.id %>
  	<%= c.hidden_field :commentable_type, :value => commentable.class %>
    <%= c.submit "Comment", class: "pull-right btn btn-sm btn-primary" %>
  </div>

  <% end %>
</div> <!-- end panel default -->