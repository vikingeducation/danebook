// clears comment form values after posting a new one
$('.comment-form textarea').val('');

// renders the new comment hidden right after the existing comments
// on the same commentable object
$newComment = $('*[data-id="<%= @commentable.id %>"]').find('.comments-wrapper').append("<%= escape_javascript(render partial: 'shared/single_comment', locals: { comment: @comment } ) %>").hide();
//reveals with a slide
$newComment.slideDown('fast');