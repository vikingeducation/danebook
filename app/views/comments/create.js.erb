(function(){
  var $parent = $('div[data-type=<%= @comment.commentable_type.downcase %>][data-id=<%= @comment.commentable_id %>]');
  var $commentList = $parent.find('#comments-list');
  $("<%= j(render partial: 'comment', locals: { comment: @comment } ) %>").appendTo($commentList).hide().slideDown();
  $parent.find(".form-control").val("");
})();

