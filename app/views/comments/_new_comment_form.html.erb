
<%= form_for commentable.comments.build do |comment_field| %>

  <div class="form-group">
    <div class="nav-footer">
      <%= comment_field.text_area :body,  wrap: "hard", rows: "4", :placeholder => "Share your opinion...?", :class => "form-control" %>
      <%= comment_field.hidden_field :commentable_type, :value => commentable.class %>
      <%= comment_field.hidden_field :commentable_id, :value => commentable.id %>
      <div class="clearfix">
        <%= comment_field.submit "Comment", :class => "btn btn-primary btn-sm" %>
      </div>
    </div>
  </div>
<% end  %>
