<%= form_for post.comments.build, url: {action: "create", controller: "comments"} do |f|  %>
  <div class="col-xs-10 col-xs-offset-1">
    <%= f.hidden_field(:commentable_type, value: "#{post.class.to_s}" ) %>
    <%= f.hidden_field(:commentable_id, value: post.id) %>
    <%= f.text_area(:description, class: "btn-block form-control new-comment-input", placeholder: "Penny for your thoughts...") %>
  </div>
  <div class="col-xs-6 col-xs-offset-3">
    <%= f.submit("Comment", class: "btn btn-primary btn-block") %>
  </div>
<% end %>
