<div class="col-sm-12 combox">
  <div data-type="<%= commentable.class.to_s%>-comment-list" data-id="<%= commentable.id %>">
    <% commentable.comments.includes(:likes, :user, :profile).each do |comment| %>
      <%= render partial: "comments/comment", locals: { comment: comment } %>
    <% end %>
  </div>
  <%= render partial: "comments/comment_form", locals: { commentable: commentable } %>
</div>