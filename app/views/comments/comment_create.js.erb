var commentRow = "<%= j( render partial: 'comments/comment', locals: {comment: @comment, p:  @comment.commentable_id} ) %>"
if ($('#photo-show').length == 0) {
  var commentForm = $('[data-id=<%=@comment.commentable_id%>].<%= @comment.commentable_type.downcase %>').find('.simple_form.new_comment');
  $(commentRow).hide().insertBefore(commentForm).slideDown(1000);
  $('[data-id=<%=@comment.commentable_id%>].<%= @comment.commentable_type.downcase %>').find('#comment_text').val("");
} else {
  var commentForm = $('.simple_form.new_comment');
  $(commentRow).hide().insertAfter(commentForm).slideDown(1000);
  commentForm.find('#comment_text').val("");
}
