var comment = $('[data-id='+<%= @comment.id %>+'].comment')
comment.find('.like_link').html('Like');
comment.find('.like_link').attr('href', comment.find('.like_link').attr('href').replace('unlike', 'like'));
var num = Math.max(Number(comment.find('.x-people-like-this').html().split(" ")[0]) - 1, 0);
comment.find('.x-people-like-this').html(''+num+' people like this');