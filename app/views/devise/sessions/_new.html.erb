<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {class: "navbar-form navbar-right"})  do |f| %>
  <% if devise_mapping.rememberable? -%>
  <div class="form-group">
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
  </div>
  <% end -%>

  <div class="form-group">
    <%= f.email_field :email, class: "form-control", placeholder: "Your email address" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, class: "form-control", autocomplete: "off", placeholder: "Your password here" %>
  </div>


  <div class="form-group">
    <%= f.submit "Log in", class: "btn btn-danger btn-block" %>
  </div>
<% end %>
