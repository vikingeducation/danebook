<div class="users-controller">


  <%= render partial: "sessions/navbar" %>


  <div id="flash-messages">
    <%= render partial: "shared/flash" %>
  </div>


  <main class="container">
    <div class="row">

      <!-- Bullet points on left-hand side -->
      <section class="col-sm-7 about">
        <h1 class="large-text">Connect with all your friends!</h1>
          <ul class="bullet-points">
            <li>See photos and updates in your news feed</li>
            <li>Post your status for the word to see from your profile</li>
            <li>Get in touch with your friends by "friending" them</li>
            <li>Like things because you're a positive person!</li>
          </ul>
      </section>
    

      <%= render partial: "sign_up_form", locals: { user: @user } %>


    </div> <!-- row -->

  </main>

</div>