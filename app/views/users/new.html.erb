<div class="row">
  <div class="col-xs-9 col-xs-offset-3">
    <br><br><br><br><br>
    <h1> Create a New User </h1>

    <%= form_for @user do |f| %>
      <%= f.label :email %>
      <%= f.text_field :email %>
      <br>
      <%= f.label :password %>
      <%= f.password_field :password %>
      <br>
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
      <br>
      <%= f.submit %>
    <% end %>

  </div>
</div>