<%= render "shared/flash" %>

<%= render 'users/nav' %>

<main class="container-fluid">
  <div class="row">

    <aside class="col-sm-offset-1 col-sm-4">
      <header>
        <h2>
          Connect with all your friends!
        </h2>
      </header>
      <section>
        <ul>
          <li>See photos and updates in your news feed</li>
          <li>Post your status for the world to see from your profile.</li>
          <li>Get in touch with your friends by "friending" them</li>
          <li>Like things because you're a positive person!</li>
        </ul>
      </section>
    
    </aside>

    <section class="col-sm-offset-2 col-sm-4">

      <h1>Sign Up</h1>

      <%= form_for @user do |user_fields| %>

        <div class="form-group">
          <%= user_fields.label :first_name, class: 'sr-only' %>
          <%= user_fields.text_field :first_name, class: 'form-control', placeholder: 'First Name' %>
        </div>

        <div class="form-group">
          <%= user_fields.label :last_name, class: 'sr-only' %>
          <%= user_fields.text_field :last_name, class: 'form-control', placeholder: 'Last Name' %>
        </div>

        <div class="form-group">
          <%= user_fields.label :email, class: 'sr-only' %>
          <%= user_fields.email_field :email, class: 'form-control', placeholder: 'Your Email' %>
        </div>

        <div class="form-group">
          <%= user_fields.label :password, class: 'sr-only' %>
          <%= user_fields.password_field :password, class: 'form-control', placeholder: 'Your New Password' %>
        </div>

        <div class="form-group">
          <%= user_fields.label :password_confirmation, class: 'sr-only' %>
          <%= user_fields.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirm Your Password' %>
        </div>

        <h3>Birthday</h3>

        <%= user_fields.fields_for :profile do |profile_fields| %>

          <div class="form-group">
            <%= profile_fields.label :birth_month, "Month" %>
            <%= profile_fields.select :birth_month, 1..12, class: 'form-control' %>

            <%= profile_fields.label :birth_day, "Day" %>
            <%= profile_fields.select :birth_day, 1..31, class: 'form-control' %>

            <%= profile_fields.label :birth_year, "Year" %>
            <%= profile_fields.select :birth_year, 1916..2016, class: 'form-control' %>
          </div>

          <div class="form-group form-check">
            <%= profile_fields.label :gender, "Male", value: 'male' %>
            <%= profile_fields.radio_button :gender, "Male", class: 'form-check-input' %>

            <%= profile_fields.label :gender, "Female", value: 'female' %>        
            <%= profile_fields.radio_button :gender, "Female", class: 'form-check-input' %>
          </div>

        <% end %>

        <%= user_fields.submit "Create Account", class: 'btn btn-success' %>

      <% end %>

    </section>

  </div>
</main>
