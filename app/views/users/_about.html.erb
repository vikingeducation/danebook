<div class="about-page">
  <div class="row">
    <div class="col-md-12">

      <%= render "shared/cover_header", user: @user %>

      <main>
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title text-center"><strong>About</strong></h3>
          </div>
          <div class="panel-body row">
            <div class="col-md-5"> <!-- basic information -->

              <div class="panel panel-default">
                <div class="panel-heading">
                  <h3 class="panel-title text-center"><strong>Basic Information</strong></h3>
                </div>
                <div class="panel-body">
                  <div class="row">
                    <span class="col-md-3"><strong>Email:</strong></span><%= @user.email %>
                  </div>
                </div>
              </div>

            </div> <!-- end of the left column -->

            <div class="col-md-7"> <!-- start of the right column -->

              <div class="panel panel-default">
                <div class="panel-heading">
                  <h3 class="panel-title text-center"><strong>About Me</strong></h3>
                </div>
                <div class="panel-body">
                <% if current_path == user_path %>
                  <%= @user.about_me %>
                  <hr>
                  <%= edit_profile_link %>
                <% elsif current_path == edit_user_path %>
                  <%= form_for @user do |f| %>
                  <div class="form-group">
                    <%= f.text_area :about_me, class: "form-control", rows: 8 %>
                  </div>
                  <div class="form-group">
                    <%= f.submit "Confirm", class: "btn btn-primary" %>
                  </div>
                  <% end %>
                <% end %>
                </div>
              </div>

            </div>

          </div>
        </div>
      </main>
    </div>
  </div>
</div>
