<%= form_for user, method: :post do |f| %>
  <%= f.fields_for :profile do |profile_fields| %>
    <!-- name -->
    <div class="row">
      <div class="form-group col-sm-6">
        <%= profile_fields.text_field :first_name, {class: "form-control", placeholder: "First Name"} %>
      </div>
      <div class="form-group col-sm-6">
        <%= profile_fields.text_field :last_name, {class: "form-control", placeholder: "Last Name"} %>
      </div>
    </div>
    <!-- email -->
    <div class="form-group">
      <%= f.email_field :email, {class: "form-control", placeholder: "Your Email"} %>
    </div>
    <!-- passwords -->
    <div class="form-group">
      <%= f.password_field :password, {class: "form-control", placeholder: "Your New Password"} %>
    </div>
    <div class="form-group">
      <%= f.password_field :password_confirmation, {class: "form-control", placeholder: "Confirm Your Password"} %>
    </div>
    <!-- birthday -->
    <div class="form-group">
      <%= profile_fields.label :birthday %>
      <%= profile_fields.date_field :birthday, {class: "form-control"} %>
    </div>
    <!-- gender -->
    <div class="form-group">
      <%= profile_fields.radio_button :gender, :male %>
      <%= profile_fields.label :gender, {value: "Male", class: "form-group"} %>

      <%= profile_fields.radio_button :gender, :female %>
      <%= profile_fields.label :gender, {value: "Female", class: "form-group"} %>
    </div>
  <% end %>

  <%= f.submit "Sign up", class: "btn btn-lg btn-success btn-block" %>
<% end %>
