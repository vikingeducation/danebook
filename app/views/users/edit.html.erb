<div class="static-pages">
  <%= render "/shared/header" %>
  <main id="about" class="container">
    <div class="row section-banner">
      <div class="col-md-2 col-md-offset-5 section-header">
        <h1>About</h1>
      </div>
    </div>
    <div class="row">
      <%= form_for @user do |f| %>
      <div class="col-md-4 col-md-offset-1">
        <div class="row">
          <div class="col-md-12">
            <h3>Basic Information</h3>
          </div>
        </div>
        <div class="row extra-line-height">
          <div class="col-xs-4">
            <strong>Birthday:</strong>
          </div>
          <div class="col-xs-8">
            <%= f.fields_for :profile do |profile_fields| %>

              <% profile_fields.label :birthday %>
              <%= profile_fields.text_field :birthday %>
          </div>
        </div>
        <div class="row extra-line-height">
          <div class="col-xs-4">
            <strong>College:</strong>
          </div>
          <div class="col-xs-8">
            <% profile_fields.label :college %>
            <%= profile_fields.text_field :college %>
          </div>
        </div>
        <div class="row extra-line-height">
          <div class="col-xs-4">
            <strong>Hometown:</strong>
          </div>
          <div class="col-xs-8">
            <%= profile_fields.text_field :hometown %>
          </div>
        </div>
        <div class="row extra-line-height">
          <div class="col-xs-4">
            <strong>Currently lives:</strong>
          </div>
          <div class="col-xs-8">
            <%= profile_fields.text_field :currenttown %>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12">
            <h3>Contact Information</h3>
          </div>
        </div>
        <div class="row extra-line-height">
          <div class="col-xs-4">
            <strong>Email:</strong>
          </div>
          <div class="col-xs-8">
            <%= f.text_field :email %>
          </div>
        </div>
        <div class="row extra-line-height">
          <div class="col-xs-4">
            <strong>Telephone:</strong>
          </div>
          <div class="col-xs-8">
            <%= profile_fields.text_field :telephone %>
          </div>
        </div>
      </div>
      <div class="col-md-5 col-md-offset-1">
        <div class="row">
          <div class="col-md-12">
            <h3>Words to live by</h3>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <%= profile_fields.text_field :words %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <h3>About Me</h3>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <%= profile_fields.text_field :aboutme %>
          </div>
          <% end %>
          <div class="action">
            <%= f.submit %>
          </div>
        <% end %> 
        </div>
      </div>
    </div>
  </main>
</div>