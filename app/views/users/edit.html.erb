<!-- cover -->
<%= render :partial => "shared/jumbotron", locals: {user: current_user} %>

<!-- TIMELINE NAV -->
<%= render :partial => "shared/timeline_nav", locals: {user: current_user} %>

<!-- ABOUT PANEL -->
<div class="container">
  <div class="panel panel-default user-panel">
    <div class="panel-heading">
      <h1>About</h1>
    </div>
    <div class="panel-body">
      <%= render partial: "shared/form_errors", locals: {obj: @user} %>

      <%= form_for @user do |f| %>
        <%= f.fields_for :profile do |profile_fields| %>
          <div class="row">
            <div class="col-md-5">

              <div class="row">
                <h3>Basic Information</h3>
                <div class="col-md-4">
                  <p><strong>Birthday</strong>:</p>
                  <p><strong>College</strong>:</p>
                  <p><strong>Hometown</strong>:</p>
                  <p><strong>Currently lives</strong>:</p>
                </div>
                <div class="col-md-8">
                  <p><%= profile_fields.date_field :birthday, {class: "form-control"} %></p>
                  <p><%= profile_fields.text_field :college, {class: "form-control", placeholder: "Hogwarts College"} %></p>
                  <p><%= profile_fields.text_field :hometown, {class: "form-control", placeholder: "Godrick's Hollow, England"} %></p>
                  <p><%= profile_fields.text_field :currently_lives, {class: "form-control", placeholder: "Godrick's Hollow, England"} %></p>
                </div>
              </div>

              <div class="row">
                <h3>Contact Information</h3>
                <div class="col-md-4">
                  <p><strong>Email</strong>:</p>
                  <p><strong>Telephone</strong>:</p>
                </div>
                <div class="col-md-8">
                  <p><%= f.email_field :email, {class: "form-control", placeholder: "harry_potter@hotmail.com"} %></p>
                  <p><%= profile_fields.text_field :telephone, {class: "form-control", placeholder: "555-123-4567"} %></p>
                </div>
              </div>
            </div>

            <div class="col-md-7">
              <h3>Words to Live By</h3>
              <%= profile_fields.text_area :words,
                                           {class: "form-control",
                                            placeholder: "Quotes or values that are important to you",
                                            rows: 8,
                                            cols: 80} %>

              <h3>About Me</h3>
              <%= profile_fields.text_area :about,
                                           {class: "form-control",
                                            placeholder: "Tell us about yourself",
                                            rows: 8,
                                            cols: 80} %>
            </div>
          </div>
          <div class="text-center save-btn">
            <%= f.submit "Save Changes", {class: "btn btn-primary btn-lg btn-block"} %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
