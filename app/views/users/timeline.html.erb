<main class="main timeline">

  <%= render partial: 'profiles/profile_header_and_links', locals: { user: find_current_page_user } %>

  <div class="container">

    <div class="bottom-main-section row">

      <section class="left-section col-md-4">

        <%= render partial: 'users/timeline/about_block', locals: { user: find_current_page_user } %>

        <%= render partial: 'users/timeline/photo_block', locals: { user: find_current_page_user } %>

        <%= render partial: 'users/timeline/friend_block', locals: { user: find_current_page_user } %>

      </section>

      <section class="col-md-8" id="right-section">

        <% if @current_user == find_current_page_user %>

          <%= render template: 'posts/new', locals: { user: find_current_page_user, post: Post.new } %>

        <% end %>

        <%= render template: 'posts/index', locals: { user: find_current_page_user } %>

      </section>

    </div>

  </div>

</main>
