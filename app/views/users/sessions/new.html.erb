<div class="login-box text-center">
  <h4>Log in to Danebook</h4>
  <%= simple_form_for(resource, as: resource_name, url: new_user_session_path, html: { }) do |f| %>
    <%= f.input :email, required: false, autofocus: true, label: false, placeholder: 'Email Address'  %>
    <%= f.input :password, required: false, label: false, placeholder: 'Password' %>
    <%= f.button :submit, "Sign in", class: 'btn btn-primary btn-block' %>
  <% end %>
  <p class="text-left mts small">
    <%= link_to 'Sign up for Danebook', new_user_path %>
  </p>
</div>