<%= render 'nav' %>


<div class="container">
     <div class="row">
       <div id="cover-col" class="col-xs-12">
         <img id="user-img" height="150px" src="<%=image_path('user.jpg')%>"  />
         <h2 id="about-name">Harry Potter</h2>
       </div>
       </div>

       <div id="about-links" class="row">
         <div id="link-box1" class="col-xs-1 col-xs-offset-3">
           <h5><a href="timeline.html"><strong>Timeline</strong></a></h5>
         </div>
         <div id="link-box2-current" class="col-xs-1">
           <h5><strong>About</strong></h5>
         </div>
         <div id="link-box3" class="col-xs-2">
             <h5><a href="photos.html"><strong>Photos</strong><small>(123)</small></a></h5>
         </div>
         <div id="link-box4" class="col-xs-2">
             <h5><a href="friends.html"><strong>Friends</strong><small>(542)</small></a></h5>
         </div>
         <div id="edit-link" class="col-xs-2">

             <h5><%= link_to "Edit Profile", edit_user_path(@user) if current_user && current_user == @user%></h5>
         </div>
       </div>
     </div>

       <!--       ABOUT INFO     -->
     <div id="info-wrapper" class="container">
       <div id="about-row" class="row">
         <div class="col-xs-4 col-xs-offset-4">
           <h2 id="about-col"><strong>About</strong></h2>
         </div>
         <div  class="col-xs-4">
           <% if current_user && @user == current_user %>
           <%= link_to "Edit your Profile", edit_user_path(@user), type: "button", id: "edit_btn", class: "btn btn-primary" %>
            <%end%>
         </div>
       </div>

       <div id="about-content" class="row">
           <div class="col-xs-5">
             <div class="col-xs-12">
             <h3><strong>Basic Information</strong></h3>
             </div>
             <div class="row"><h5>
             <div class="col-xs-5">
               <strong>  Birthday:</strong>
               </div>
               <div class="col-xs-7">
                 <%="#{@user.b_month}/#{@user.b_day}/#{@user.b_year}"%>
               </div>
           </h5>  </div>
             <div class="row"><h5>
               <div class="col-xs-5">
               <strong>  College:</strong>
               </div>
               <div class="col-xs-7">
                 <%= @user.college %>
               </div>
             </h5></div>
             <div class="row"><h5>
               <div class="col-xs-5">
               <strong>  Hometown:</strong>
               </div>
               <div class="col-xs-7">
                 <%= @user.home %>
               </div>
             </h5></div>
             <div class="row"><h5>
               <div class="col-xs-5">
               <strong>  Currently Lives:</strong>
               </div>
               <div class="col-xs-7">
                 <%= @user.lives %>
               </div>
           </h5>  </div>

             <div class="col-xs-12">
             <h3><strong>Contact Information</strong></h3>
             </div>
             <div class="row"><h5>
               <div class="col-xs-5">
               <strong>  Email:</strong>
               </div>
               <div class="col-xs-7">
                 <%= @user.email %>
               </div>
             </h5></div>
             <div class="row"><h5>
               <div class="col-xs-5">
               <strong>  Telephone:</strong>
               </div>
               <div class="col-xs-7">
                 <%= @user.phone %>
               </div>
           </h5>  </div>
           </div>
           <div class="col-xs-7">
             <div class="col-xs-11 col-xs-offset-1">
             <h3><strong>Words to Live By</strong></h3>
             </div>
               <div class="col-xs-11 col-xs-offset-1">
                 <p><%=@user.words%></p>
               </div>
               <div class="col-xs-11 col-xs-offset-1">
                <h3><strong>About Me</strong></h3>
               </div>
               <div class="col-xs-11 col-xs-offset-1">
                 <p><%= @user.bio %></p>
               </div>
           </div>
       </div>
     </div>
