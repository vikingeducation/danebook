<% if pending_friends.include?(user) %>
  <i class="text-danger pull-right req-pending">(Request Pending)</i>
<% end %>
<% if friends.include?(user) %>
  <%= link_to "Unfriend Me!", friendship_path(user.id), method: "DELETE", class: "btn btn-default unfriend-btn" %>
<% else %>
  <%= simple_form_for @friendship, class: "friend_form" do |f| %>
    <%= f.input :initiator, :as => :hidden, :input_html => { :value => current_user.id } %>
    <%= f.input :recipient, :as => :hidden, :input_html => { :value => user.id } %>
    <%= f.button :submit, 'Friend Me!', class: "btn btn-primary friend-btn" %>
  <% end %>
<% end %>