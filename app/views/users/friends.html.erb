<div class="container">
    <%= render partial: "/shared/profile_bar", locals: { user: @user }%>
    <div class="col-sm-10 col-sm-offset-1">
        <% @user.friends.each do |friend| %>
        <div class="friends-col">
            <div id="friend-pic">
                <%= profile_pic(friend) %>
            </div>
            <span>
                <%= link_to friend, friend %>
            </span>
        </div>
        <% end %>
    </div>

</div>
