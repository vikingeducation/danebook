<%= render partial: "shared/navbar" %>
<main>
	<%= render partial: "shared/info" %>

		<!-- This row will hold the "About" Information. -->
		<!-- The info-section and info-section-topbar css classes are re-used for about_edit and about -->
		<div class="row info-section">
			<div class="col-md-12">
				<!-- This row holds the top bar of the about section -->
				<div class="row info-section-topbar">
					<div class="col-md-2 col-md-offset-5">
						<h2>About</h2>
					</div>
					<% if current_user && current_user.id == @user.id %>
					<div class="col-md-2 col-md-offset-3">
						<%= link_to "Edit your Profile", edit_user_path(@user), class: "btn btn-primary" %>
					</div>
					<% end %>
				</div>
				<div class="row">
					<div class="col-md-5">
						<div class="row">
							<div class="col-md-12">
								<div class="center"><h3>Basic Information</h3></div>
							</div>
						</div>
						<div class="row">
							<div class="col-md-12">
								<b>Birthday:</b> <%= profile_helper(@user.birthday) %>
							</div>
						</div>
						<div class="row">
							<div class="col-md-12">
								<b>College:</b> <%= profile_helper(@user.profile.college) %>
							</div>
						</div>
						<div class="row">
							<div class="col-md-12">
								<b>Hometown:</b> <%= profile_helper(@user.profile.hometown) %>
							</div>
						</div>
						<div class="row">
							<div class="col-md-12">
								<b>Currently Lives:</b> <%= profile_helper(@user.profile.location) %>
							</div>
						</div>
						<div class="row">
							<div class="col-md-12">
								<div class="center"><h3>Contact Information</h3></div>
							</div>
						</div>
						<div class="row">
							<div class="col-md-12">
								<b>Email:</b> <%= profile_helper(@user.email) %>
							</div>
						</div>
						<div class="row">
							<div class="col-md-12">
								<b>Telephone:</b> <%= profile_helper(@user.profile.telephone) %>
							</div>
						</div>
					</div>

					<div class="col-md-7">
						<div class="row">
							<div class="col-md-12">
								<div class="center"><h2>Words to Live By</h2></div>
							</div>
							<div class="col-md-12">
								<p>
									<%= profile_helper(@user.profile.words) %>
								</p>
							</div>
							<div class="col-md-12">
								<div class="center"><h2>About Me</h2></div>
							</div>
							<div class="col-md-12">
								<p>
									<%= profile_helper(@user.profile.about) %>
								</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

	</div>
</main>
