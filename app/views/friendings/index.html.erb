<%= render 'shared/search_nav' %>
<%= render 'shared/banner_nav' %>

<main class="container">
    <div class="row">
      <div class="panel panel-default col-xs-offset-1 col-xs-10">
        <div class="panel-heading row">
          <div class="panel-title">
            <h2 class="text-center col-xs-12">Friends</h2>
          </div>
        </div>
        <div class="panel-body">
          <div class="row">

            <% @friends.each do |friend| %>

            <div class="col-sm-6">
              <ul class="list-inline row well well-sm">
                <li class="col-xs-3">
                  <%= image_tag "default.gif", class: "thumbnail img-responsive" %>
                </li>
                <li class="col-xs-5">
                  <h4>
                    <%= link_to "#{friend.profile.first_name} #{friend.profile.last_name}", user_timeline_path(friend.id)  %>
                  </h4>
                    <p class="text-muted">
                      <%= "#{pluralize(friend_count(friend.id), 'Friend') unless friend_count(friend.id).zero?}" %>
                    </p>
                </li>

                <% if current_user == @user %>
                <li class="col-xs-4 vertical-align">
                  <%= button_to "Unfriend", friending_path(friend.id), method: :delete, data: { confirm: "Unfriend #{friend.profile.first_name} #{friend.profile.last_name}" }, class: "btn btn-danger" %>
                </li>
                <% end %>

              </ul>
            </div>

            <% end %>


        </div>
      </div>
    </div>
  </main>
