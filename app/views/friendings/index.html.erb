
<section id="interior-page">

  <%= render partial: "shared/header", locals: { user: @user } %>

  <main class="container">
    <div class="row">
      <div class="panel panel-default col-xs-offset-1 col-xs-10">
        <div class="panel-heading row">
          <div class="panel-title">
            <h2 class="text-center col-xs-12">Friends</h2>
          </div>
        </div>
        <div class="panel-body">
          <div class="row">
          
            <% if @user.friends.any? %>

              <% @user.friends.each do |friend| %>

                <div class="col-sm-6">
                  <ul class="list-inline row well well-sm">

                    <li class="col-xs-3">
                      <%= link_to user_path(friend), class: "thumbnail" do %>
                        <%= display_profile_photo(friend, "small") %>
                      <% end %>
                    </li>

                    <li class="col-xs-5">
                      <h4><%= link_to "#{friend.full_name}", user_path(friend) %></h4>
                      <p class="text-muted"><%= pluralize(friend.friends.count, 'friend') %></p>
                    </li>

                    <li class="col-xs-4 vertical-align">
                      <%= display_friend_button(friend) %>
                    </li>

                  </ul>
                </div>

              <% end %>

            <% end %>

          </div>
        </div>
      </div>
    </div>
  </main>  

</section>