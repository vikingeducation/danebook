<% unless user == current_user %>

  <% unless current_user.friends.include?(user) %>

  <%= link_to "I Want to be Friends with this Person!", friendings_path(id: user.id), method: :post, class: "btn btn-primary" %>

  <% else %>

  <%= link_to "You're friends! Unfriend?", friending_path(id: user.id), method: :delete, class: "btn btn-primary" %>

  <% end %>

<% end %>