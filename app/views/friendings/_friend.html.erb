<div class="col-sm-6 content-left">
  <div class="row friend-wrapper">
    <div class="col-xs-6 col-sm-6 col-md-3">
      <%= link_to user_path(user), class: "friend-preview-img" do %>
        <%= image_tag(profile_pic_url(user), class: "img-responsive pull-left") %>
      <% end %>
    </div>
    <div class="col-xs-6 col-sm-6 col-md-4 friend-name-wrapper">
      <p><%= link_to "#{user.full_name}", user_profile_path(user, user.profile) %></p>
      <p class="friend-prev-name"><%= pluralize(user.friended_users.count, "friend") %></p>
      <p>
        <% if user == current_user || current_user.friended_user_ids.include?(user.id) %>
          <%= button_to "Unfriend", friending_path(user.id, :current_user_id => current_user.id), :method => :delete, class: "btn btn-primary" %>
        <% elsif signed_in_user? %>
          <%= button_to "Friend", {controller: 'friendings', action: 'create', id: user.id }, class: "btn btn-primary" %>
        <% end %>
      </p>
    </div>
  </div><!-- Friend Wrapper -->
</div>
