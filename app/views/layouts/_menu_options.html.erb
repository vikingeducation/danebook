<div class="row"><!-- begin background-image row -->
  <div style="background: url('<%= user.cover_photo.image.url if user.cover_photo %>') 100% 100%/100% 100% no-repeat" class="col-xs-12 cover-photo"><!-- cover photo spans entire column -->
    <div class="row">
      <p class="col-xs-3 col-xs-offset-2" id="main-name">
        <% if user %>
          <%= user.profile.name %>
        <% else %>
          <%= 'Harry Potter' %>
        <% end %>
      </p>
      <% if user.profile_photo %>
        <%= image_tag(user.profile_photo.image.url, class: 'col-xs-2 profile-pic') %>
      <% end %>
    </div>
  </div>
</div><!-- end background-image row -->
<div class="row"> <!-- begin menu-options row-->
  <div class="col-xs-12" id="menu-options-tray">
    <div class="btn-group col-xs-9 col-xs-offset-2">
      <%= link_to user_timeline_path(user), method: :get, class: menu_options_class('timeline') do %>
        <p class="vertical-align col-xs-offset-4">Timeline</p>
      <% end %>
      <%= link_to user_about_path(user), method: :get, class: menu_options_class('about')  do %>
        <p class="vertical-align col-xs-offset-4">About</p>
      <% end %>
      <%= link_to user_photos_path(user), method: :get, class: menu_options_class('photos')  do %>
        <p class="vertical-align col-xs-offset-4">Photos</p>
      <% end %>
      <%= link_to user_friends_path(user), method: :get, class: menu_options_class('friends')  do %>
        <p class="vertical-align col-xs-offset-4">Friends</p>
      <% end %>
      <%= friend_or_unfriend_button %>
    </div>
  </div>
</div> <!-- end menu-options row-->
