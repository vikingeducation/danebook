
<header>
  <nav class="navbar navbar-fixed-top" role="navigation">
    <div class="container">
      <div class="row">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <div class="navbar-brand col-sm-2 col-sm-offset-1">
              <%= link_to(current_user) do %>
                <%= image_tag('logo.png')%>
              <% end %>
            </div>
        </div>

      <div class="navbar-collapse collapse" id="bs-example-navbar-collapse-1">
        <div class="col-sm-7">
          <input type="text" class="custom-form form-control" id="search_bar" placeholder="search for users">
        </div>

        <div class="navbar my_name col-xs-2 col-xs-offset-1">
            <%= image_tag("default_user.gif", :id => "profile_thumbnail")%><p><%= link_to current_user.first_name, current_user%> | </p>
            <p class="sign_out"><%= link_to "Sign Out", logout_path, method: :delete %></p>
        </div>
                    
      </div>
      </nav> <!-- closing nav -->
    </div><!-- closing row -->
  </div><!-- closing column -->
</header>