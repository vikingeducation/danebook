<main class = "container">

  <section class = "container" id="search-section">
    <div class="row">
        <br>
        <p class="col-md-10-2 text-center">
          Showing <%= @matches.size %> users whose first or
          last names contain "<%= params[:query] %>"
        </p>
      <header>
        <div class="col-xs-offset-2 col-xs-8">
          <h2>Search Results</h2>
        </div>
      </header>
      <!--search results-->

      <div class="col-md-10 col-md-offset-1" id="friends-section">
        <!-- list all existing matches below -->
        <%= render partial: "friendings/friends", locals: {friends: @matches} %>
      </div>

    </div>

  </section>
</main>

