<%= render partial: "static_pages_controller/navbar", :locals => {first_name: current_user.first_name } %>
<main>

  <!-- Profile Header -->

  <%= render partial: "static_pages_controller/menu", :locals => { :active => 'Friends', first_name: @user.first_name, last_name: @user.last_name } %>

  <!-- /profile header -->


  <!-- Main Content -->

  <div class="container">

    <div class="row test">

      <div class="col-xs-2 col-xs-offset-5">

        <h3>Friends</h3>

      </div>

        <!-- <a class="btn btn-primary pull-right" href="about_edit.html" type="button">Edit Your Profile</a>
 -->
      </div>

    </div>

    <div class="row main-content">

      <% @friends.each do |friend| %>

      <div class="col-sm-6">

        <div class="friend-container">

          <div class="col-xs-3">

            <img src="http://s3.amazonaws.com/viking_education/web_development/web_app_eng/user_silhouette_generic.gif">

          </div>

          <div class="col-xs-5">

            <div class="friend-info">

              <h4><%= link_to friend.full_name, user_path(friend) %></h4>
              <%= friend.friends.count %> Friends

            </div>

          </div>

          <div class="col-xs-4">

            <%= link_to "Remove Friend", friendship_path(:friend_id => friend),
                             :method => :delete,
                             class: "btn btn-primary pull-right btn-unfriend" %>

          </div>

        </div>

      </div>

      <% end %>

        <hr>

      </div>

    </div>

  </div>

</main>
