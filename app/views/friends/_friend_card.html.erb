<div class="col-sm-6">

        <div class="friend-container">

          <div class="col-xs-3">

            <img src="http://s3.amazonaws.com/viking_education/web_development/web_app_eng/user_silhouette_generic.gif">

          </div>

          <div class="col-xs-12">

            <div class="friend-info">

              <h4><%=link_to friend.full_name, user_path(friend)%></h4>
              <%= friend.friends.count %> friend(s)


            </div>

          </div>

            <%if notfriends?(current_user.id, friend.id)%>
              <div class="col-xs-3">
                <%= link_to "Friend Me", friendings_path(friend.id), method: "post", class: "btn btn-primary" %>
              </div>
            <%else%>
              <div class="col-xs-3">
                <%= link_to "Unfriend Me", friendings_path(friend.id), method: "delete", class: "btn btn-default" %>
              </div>
            <%end%>

          </div>

        </div>

      </div>
